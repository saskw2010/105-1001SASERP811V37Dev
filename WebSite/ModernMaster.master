    <script>
        // Relocate language/menu buttons into MembershipBar and center them
        window.addEventListener('load', function() {
            try {
                const membership = document.getElementById('Membership_Login') || document.querySelector('.MembershipBar');
                if (membership) {
                    let group = membership.querySelector('.header-icon-group');
                    if (!group) {
                        group = document.createElement('span');
                        group.className = 'header-icon-group center';
                        group.style.display = 'inline-flex';
                        group.style.gap = '.25rem';
                        membership.appendChild(group);
                    }

                    const btnLang = document.getElementById('languageToggleBtn');
                    const btnMenu = document.getElementById('menuToggleBtn') || document.querySelector('.mobile-menu-toggle');
                    const help = membership.querySelector('.HelpLink');

                    // Leave menu button out of the center group (will be placed near brand)
                    if (btnLang && btnLang.parentElement !== group) group.appendChild(btnLang);
                    if (help && help.parentElement !== group) group.appendChild(help);

                    // Build/ensure brand area with single-line system-brand and menu button
                    let brand = document.querySelector('.brand-area');
                    if (!brand) {
                        brand = document.createElement('span');
                        brand.className = 'brand-area';
                        brand.innerHTML = '<span class="system-brand">'
                            + '<button type="button" class="membership-btn" id="menuToggleBtn" title="ÿßŸÑŸÇÿßÿ¶ŸÖÿ©"><i class="fas fa-bars"></i></button>'
                            + '<span class="brand-icon"><i class="fas fa-cube"></i></span>'
                            + '<span class="brand-text">SKYsaas ERP - ŸÜÿ∏ÿßŸÖ ÿ•ÿØÿßÿ±ÿ© ÿßŸÑŸÖŸàÿßÿ±ÿØ ÿßŸÑŸÖÿ§ÿ≥ÿ≥Ÿäÿ©</span>'
                            + '</span>';
                        (membership.parentElement || membership).appendChild(brand);
                    }

                    // If an existing menu button was found elsewhere, move it into system-brand and remove duplicates
                    const systemBrand = brand.querySelector('.system-brand');
                    if (btnMenu && btnMenu.parentElement !== systemBrand) {
                        // Remove any placeholder button inside system-brand
                        const placeholder = systemBrand.querySelector('#menuToggleBtn');
                        if (placeholder && placeholder !== btnMenu) placeholder.remove();
                        systemBrand.insertBefore(btnMenu, systemBrand.firstChild);
                    }
                    // Ensure there is only one menu button across the header
                    const menuButtons = Array.from(document.querySelectorAll('#menuToggleBtn, .mobile-menu-toggle'));
                    if (menuButtons.length > 1) menuButtons.slice(1).forEach(b => { if (b !== btnMenu && b.parentElement) b.parentElement.removeChild(b); });
                    // Ensure center group does not include the menu button
                    if (btnMenu && group.contains(btnMenu)) group.removeChild(btnMenu);

                    // Optional improvements: notifications and profile dropdown
                    let notifBtn = membership.querySelector('#headerNotifBtn');
                    if (!notifBtn) {
                        notifBtn = document.createElement('button');
                        notifBtn.id = 'headerNotifBtn';
                        notifBtn.className = 'membership-btn header-icon-btn';
                        notifBtn.type = 'button';
                        notifBtn.title = 'Notifications';
                        notifBtn.innerHTML = '<i class="fas fa-bell"></i>';
                    }
                    let profileBtn = membership.querySelector('#headerProfileBtn');
                    if (!profileBtn) {
                        profileBtn = document.createElement('button');
                        profileBtn.id = 'headerProfileBtn';
                        profileBtn.className = 'membership-btn header-icon-btn';
                        profileBtn.type = 'button';
                        profileBtn.title = 'Profile';
                        profileBtn.innerHTML = '<i class="fas fa-user"></i>';
                    }

                    let notifDrop = document.getElementById('headerNotifDropdown');
                    if (!notifDrop) {
                        notifDrop = document.createElement('div');
                        notifDrop.id = 'headerNotifDropdown';
                        notifDrop.className = 'header-dropdown';
                        notifDrop.innerHTML = '<div class="dropdown-title">Notifications</div>' +
                            '<div class="dropdown-item">No new notifications</div>';
                        document.body.appendChild(notifDrop);
                    }
                    let profileDrop = document.getElementById('headerProfileDropdown');
                    if (!profileDrop) {
                        profileDrop = document.createElement('div');
                        profileDrop.id = 'headerProfileDropdown';
                        profileDrop.className = 'header-dropdown';
                        profileDrop.innerHTML = '<div class="dropdown-title">Account</div>' +
                            '<div class="dropdown-item" onclick="location.href=\'/Pages/MyProfile.aspx\'">My Account</div>' +
                            '<div class="dropdown-item" onclick="location.href=\'/Pages/Membership.aspx\'">Membership</div>' +
                            '<div class="dropdown-item" onclick="if(window.Web&&Web.Membership&&Web.Membership._instance){Web.Membership._instance.logout();} else { location.href=\'/Account/Logout.aspx\'; }">Logout</div>';
                        document.body.appendChild(profileDrop);
                    }

                    if (notifBtn && !group.contains(notifBtn)) group.appendChild(notifBtn);
                    if (profileBtn && !group.contains(profileBtn)) group.appendChild(profileBtn);

                    function closeAllDrops(){
                        notifDrop.classList.remove('open');
                        profileDrop.classList.remove('open');
                    }
                    notifBtn.addEventListener('click', function(e){
                        e.stopPropagation();
                        const isOpen = notifDrop.classList.contains('open');
                        closeAllDrops();
                        if (!isOpen) notifDrop.classList.add('open');
                    });
                    profileBtn.addEventListener('click', function(e){
                        e.stopPropagation();
                        const isOpen = profileDrop.classList.contains('open');
                        closeAllDrops();
                        if (!isOpen) profileDrop.classList.add('open');
                    });
                    document.addEventListener('click', closeAllDrops);
                    window.addEventListener('resize', closeAllDrops);
                }

                // Ensure membership actions are centered if present
                const ma = document.querySelector('.membership-actions');
                if (ma && !ma.classList.contains('center')) ma.classList.add('center');
            } catch (e) {
                console && console.warn && console.warn('ModernMaster header relocation skipped:', e);
            }
        });
    </script>
    <script>
        // Enable slide-in Modern Menu on mobile/desktop
        document.addEventListener('DOMContentLoaded', function() {
            const host = document.getElementById('ModernMenuHost');
            const openBtn = document.getElementById('menuToggleBtn') || document.querySelector('.mobile-menu-toggle');
            if (!host || !openBtn) return;

            const backdrop = host.querySelector('.pm-backdrop');
            const closeBtn = host.querySelector('.pm-close');

            function openMenu() { host.classList.add('open'); }
            function closeMenu() { host.classList.remove('open'); }
            function toggleMenu() { host.classList.toggle('open'); }

            openBtn.addEventListener('click', toggleMenu);
            if (backdrop) backdrop.addEventListener('click', closeMenu);
            if (closeBtn) closeBtn.addEventListener('click', closeMenu);
            document.addEventListener('keydown', function(e){ if (e.key === 'Escape') closeMenu(); });
        });
