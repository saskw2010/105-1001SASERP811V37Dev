    <script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('Modern Master Page initialized');
        
        // Initialize theme system
        initializeThemeSystem();
        
        // Initialize user roles manager if available
        if (typeof UserRolesManager !== 'undefined') {
            const userManager = new UserRolesManager();
            userManager.updateUserInterface();
        }
        
        // Mobile menu toggle
        const mobileToggle = document.getElementById('mobileMenuToggle');
        const navigation = document.getElementById('modernNavigation');
        
        if (mobileToggle && navigation) {
            mobileToggle.addEventListener('click', function() {
                navigation.classList.toggle('mobile-open');
            });
        }
        
        // Auto-hide/show sidebar based on content
        const sidebar = document.getElementById('contentSidebar');
        if (sidebar && sidebar.children.length === 0) {
            sidebar.style.display = 'none';
            document.querySelector('.content-layout').style.gridTemplateColumns = '1fr';
        }
        
        // Theme dropdown functionality
        setupThemeDropdown();
    });
    
    // Initialize theme system
        function initializeThemeSystem() {
            // Apply saved theme or detect system preference
            if (window.advancedThemeSystem) {
                window.advancedThemeSystem.init();
            } else {
                // Fallback if theme system not loaded yet
                setTimeout(() => {
                    if (window.advancedThemeSystem) {
                        window.advancedThemeSystem.init();
                    }
                }, 500);
            }
        }    // Setup theme dropdown
    function setupThemeDropdown() {
        const themeBtn = document.querySelector('.theme-btn');
        const themeDropdown = document.getElementById('themeDropdown');
        
        if (themeBtn && themeDropdown) {
            themeBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                themeDropdown.classList.toggle('show');
            });
            
            // Close dropdown when clicking outside
            document.addEventListener('click', function() {
                themeDropdown.classList.remove('show');
            });
            
            themeDropdown.addEventListener('click', function(e) {
                e.stopPropagation();
            });
        }
    }
    
    // Theme functions
    function setTheme(themeName) {
        if (window.advancedThemeSystem) {
            window.advancedThemeSystem.setTheme(themeName);
            showNotification(`ÿ™ŸÖ ÿ™ÿ∑ÿ®ŸäŸÇ ÿ´ŸäŸÖ ${getThemeNameAr(themeName)}`, 'success');
        }
        document.getElementById('themeDropdown').classList.remove('show');
    }
    
    function quickSwitchTheme() {
        const currentTheme = localStorage.getItem('selectedTheme') || 'light';
        const themes = ['light', 'dark', 'ai', 'citrus', 'emerald', 'rose'];
        const currentIndex = themes.indexOf(currentTheme);
        const nextTheme = themes[(currentIndex + 1) % themes.length];
        setTheme(nextTheme);
    }
    
    function getThemeNameAr(themeKey) {
        const names = {
            light: 'ŸÅÿßÿ™ÿ≠',
            dark: 'ÿØÿßŸÉŸÜ',
            ai: 'ÿ∞ŸÉŸä',
            citrus: 'ÿ≠ŸÖÿ∂Ÿä',
            emerald: 'ÿ≤ŸÖÿ±ÿØŸä',
            rose: 'Ÿàÿ±ÿØŸä'
        };
        return names[themeKey] || themeKey;
    }
    
    function openThemeManager() {
        window.open('/TestPages/theme-management-console.html', '_blank');
        document.getElementById('themeDropdown').classList.remove('show');
    }
    
    // Keyboard shortcuts for themes
    document.addEventListener('keydown', function(e) {
        if (e.ctrlKey && e.shiftKey) {
            switch (e.key.toLowerCase()) {
                case 'l':
                    e.preventDefault();
                    setTheme('light');
                    break;
                case 'd':
                    e.preventDefault();
                    setTheme('dark');
                    break;
                case 'a':
                    e.preventDefault();
                    setTheme('ai');
                    break;
                case 't':
                    e.preventDefault();
                    quickSwitchTheme();
                    break;
            }
        }
    });
    
    // Global notification function
    function showNotification(message, type = 'info') {
        const container = document.getElementById('notificationContainer');
        if (!container) return;
        
        const notification = document.createElement('div');
        notification.className = `notification notification-${type}`;
        notification.innerHTML = `
            <div class="notification-content">
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
                <span>${message}</span>
                <button class="notification-close" onclick="this.parentElement.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        `;
        
        container.appendChild(notification);
        
        // Auto remove after 5 seconds
        setTimeout(() => {
            if (notification.parentElement) {
                notification.remove();
            }
        }, 5000);
    }
    </script>

