        // Update username function
        function updateUserName() {
            try {
                // Try to get username from legacy membership bar
                const legacyMembershipBar = document.getElementById('Membership_Login');
                const userNameElement = document.getElementById('currentUserName');

                if (legacyMembershipBar && userNameElement) {
                    // Extract username from legacy membership bar
                    const welcomeText = legacyMembershipBar.innerText || legacyMembershipBar.textContent;
                    let username = 'المستخدم';

                    // Try different patterns to extract username
                    if (welcomeText) {
                        // Pattern 1: "Welcome, username"
                        const welcomeMatch = welcomeText.match(/Welcome[,\s]+([^|]+)/i);
                        if (welcomeMatch) {
                            username = welcomeMatch[1].trim();
                        }
                        // Pattern 2: Arabic welcome patterns
                        const arabicMatch = welcomeText.match(/مرحبا[ً،\s]+([^|]+)/);
                        if (arabicMatch) {
                            username = arabicMatch[1].trim();
                        }
                        // Pattern 3: Extract from any text before pipe or logout
                        const beforePipeMatch = welcomeText.match(/^([^|]+)/);
                        if (beforePipeMatch && beforePipeMatch[1].trim() && !beforePipeMatch[1].includes('Welcome')) {
                            username = beforePipeMatch[1].trim();
                        }
                    }

                    userNameElement.textContent = username;
                }

                // Also try to get from server-side if available
                if (typeof __username !== 'undefined' && __username) {
                    document.getElementById('currentUserName').textContent = __username;
                } else if (typeof Web !== 'undefined' && Web.Membership && Web.Membership._instance) {
                    const membershipInstance = Web.Membership._instance;
                    if (membershipInstance.get_user && membershipInstance.get_user()) {
                        document.getElementById('currentUserName').textContent = membershipInstance.get_user();
                    }
                }
            } catch (e) {
                console.log('Unable to update username:', e);
            }
        }

        // Initialize everything when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize the menu system
            window.LegacyMenu.init();
            
            // Update username with real data
            updateUserName();

            // Update current time
            updateCurrentTime();
            setInterval(updateCurrentTime, 60000);

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Close mobile menu when clicking outside
            document.addEventListener('click', function(event) {
                const sidebar = document.getElementById('legacyMenuSidebar');
                const menuBtn = document.querySelector('.legacy-mobile-menu-btn');
                
                if (sidebar && sidebar.classList.contains('active') && 
                    !sidebar.contains(event.target) && 
                    (!menuBtn || !menuBtn.contains(event.target))) {
                    closeLegacyMenu();
                }
            });
        });

        // Set active menu item based on current URL
        function setActiveMenuItem() {
            const currentPath = window.location.pathname.toLowerCase();
            const menuItems = document.querySelectorAll('.legacy-nav-item, .legacy-menu-item');

            menuItems.forEach(item => {
                const href = item.getAttribute('href')?.toLowerCase();
                if (href && currentPath.includes(href)) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        }

        // Handle window resize
        window.addEventListener('resize', function() {
            // Close mobile menu on resize to desktop
            if (window.innerWidth >= 992) {
                closeLegacyMenu();
            }
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // ESC to close menu
            if (e.key === 'Escape') {
                closeLegacyMenu();
            }

            // Ctrl/Cmd + K to open search
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                const searchInput = document.getElementById('legacyMenuSearch');
                if (searchInput) {
                    searchInput.focus();
                    toggleLegacyMenu();
                }
            }
        });
    </script>
</body>
</html>