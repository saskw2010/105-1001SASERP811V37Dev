<%@ Master Language="VB" AutoEventWireup="false" CodeFile="LegacyMenuModernMaster.master.vb" Inherits="Main" %>
<!DOCTYPE html>
<html xml:lang="<%= System.Globalization.CultureInfo.CurrentUICulture.IetfLanguageTag %>" lang="<%= System.Globalization.CultureInfo.CurrentUICulture.IetfLanguageTag %>">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>SKYsaas - نظام إدارة الموارد المؤسسية الحديث مع المنيو الليجاسي</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="نظام إدارة الموارد المؤسسية المتطور - SKYsaas ERP مع المنيو الليجاسي المدمج" />

    <!-- Modern CSS Framework -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />

    <!-- Custom Stylesheets -->
    <link rel="shortcut icon" href="/favicon.png" />
    <link href="/css/pagemenubar.css" rel="stylesheet" type="text/css" />
    <link href="/css/notifications.css" rel="stylesheet" type="text/css" />

    <!-- Legacy Menu Integration CSS -->
    <link href="/css/legacy-menu-modern-integration.css" rel="stylesheet" type="text/css" />

    <!-- Ultra Modern Design System -->
    <style>
        /* CSS Variables for Dynamic Theming */
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --warning-gradient: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            --danger-gradient: linear-gradient(135deg, #fa709a 0%, #fee140 100%);

            --shadow-soft: 0 2px 15px rgba(0, 0, 0, 0.1);
            --shadow-medium: 0 8px 30px rgba(0, 0, 0, 0.12);
            --shadow-strong: 0 20px 60px rgba(0, 0, 0, 0.15);

            --border-radius: 16px;
            --border-radius-lg: 24px;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);

            --header-height: 70px;
            --sidebar-width: 280px;

            --glass-bg: rgba(255, 255, 255, 0.95);
            --glass-border: rgba(255, 255, 255, 0.2);

            /* Legacy Menu Integration Variables */
            --legacy-menu-bg: #2c3e50;
            --legacy-menu-text: #ffffff;
            --legacy-menu-accent: #3498db;
            --legacy-menu-hover: #34495e;
        }

        /* Global Reset & Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            font-weight: 400;
            line-height: 1.6;
            color: #334155;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Glassmorphism Background */
        .app-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            z-index: -2;
        }

        .app-background::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.05"><circle cx="30" cy="30" r="2"/></g></svg>');
            z-index: -1;
        }

        /* Membership Top Bar */
        .membership-top-bar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 45px;
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            z-index: 1001;
            color: white;
            font-size: 0.875rem;
        }

        .membership-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 100%;
            padding: 0 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .welcome-text {
            color: #94a3b8;
        }

        .username {
            color: #67e8f9;
            font-weight: 600;
        }

        .membership-actions {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .membership-btn {
            background: none;
            border: none;
            color: #94a3b8;
            cursor: pointer;
            padding: 0.25rem 0.5rem;
            border-radius: 6px;
            transition: var(--transition);
            font-size: 0.75rem;
            display: flex;
            align-items: center;
            gap: 0.25rem;
            white-space: nowrap;
        }

        .membership-btn:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            transform: translateY(-1px);
        }

        .membership-btn i {
            font-size: 0.8rem;
        }

        .language-selector {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 6px;
            font-size: 0.8rem;
            cursor: pointer;
            transition: var(--transition);
        }

        .language-selector:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        /* Ultra Modern Header - Adjusted for membership bar */
        .ultra-header {
            position: fixed;
            top: 45px;
            left: 0;
            right: 0;
            height: var(--header-height);
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid var(--glass-border);
            z-index: 1000;
            transition: var(--transition);
        }

        .header-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 100%;
            padding: 0 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Brand Logo */
        .brand-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .brand-logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-decoration: none;
            color: #1e293b;
            font-weight: 800;
            font-size: 1.5rem;
            transition: var(--transition);
        }

        .brand-logo:hover {
            color: #667eea;
            transform: scale(1.02);
        }

        .brand-icon {
            width: 40px;
            height: 40px;
            background: var(--primary-gradient);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            box-shadow: var(--shadow-soft);
        }

        /* Legacy Menu Integration - Desktop Horizontal Menu */
        .legacy-menu-desktop {
            display: none;
            flex: 1;
            justify-content: center;
            padding: 0 2rem;
            align-items: center;
        }

        .legacy-nav-menu {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 0.5rem 1rem;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .legacy-nav-item {
            position: relative;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            color: #64748b;
            text-decoration: none;
            border-radius: 12px;
            transition: var(--transition);
            font-weight: 500;
            font-size: 0.95rem;
            white-space: nowrap;
        }

        .legacy-nav-item:hover {
            background: rgba(255, 255, 255, 0.2);
            color: #667eea;
            transform: translateY(-1px);
        }

        .legacy-nav-item.active {
            background: var(--primary-gradient);
            color: white;
            box-shadow: var(--shadow-soft);
        }

        .legacy-nav-item i {
            font-size: 1.1rem;
            width: 20px;
            text-align: center;
        }

        /* Legacy Menu Dropdown */
        .legacy-nav-dropdown {
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            background: var(--glass-bg);
            border-radius: var(--border-radius);
            border: 1px solid var(--glass-border);
            box-shadow: var(--shadow-strong);
            min-width: 250px;
            opacity: 0;
            visibility: hidden;
            transition: var(--transition);
            z-index: 1002;
            backdrop-filter: blur(20px);
        }

        .legacy-nav-item:hover .legacy-nav-dropdown {
            opacity: 1;
            visibility: visible;
            transform: translateX(-50%) translateY(8px);
        }

        .legacy-nav-dropdown-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            color: #334155;
            text-decoration: none;
            transition: var(--transition);
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .legacy-nav-dropdown-item:hover {
            background: rgba(103, 126, 234, 0.1);
            color: #667eea;
        }

        .legacy-nav-dropdown-item:last-child {
            border-bottom: none;
        }

        .legacy-nav-dropdown-item i {
            width: 18px;
            text-align: center;
            color: #64748b;
        }

        /* User Section */
        .user-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .notification-btn, .user-btn {
            position: relative;
            width: 44px;
            height: 44px;
            border: none;
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.1);
            color: #64748b;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: var(--transition);
            backdrop-filter: blur(10px);
        }

        .notification-btn:hover, .user-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-1px);
            color: #667eea;
        }

        .notification-badge {
            position: absolute;
            top: -2px;
            right: -2px;
            width: 18px;
            height: 18px;
            background: var(--danger-gradient);
            color: white;
            border-radius: 50%;
            font-size: 0.7rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px rgba(250, 112, 154, 0.3);
        }

        /* Legacy Mobile Menu Button (Hidden on Desktop) */
        .legacy-mobile-menu-btn {
            display: none;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1.5rem;
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            color: #64748b;
            cursor: pointer;
            transition: var(--transition);
            backdrop-filter: blur(10px);
            font-weight: 600;
            font-size: 0.95rem;
        }

        .legacy-mobile-menu-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
            color: #667eea;
            border-color: rgba(103, 126, 234, 0.3);
            box-shadow: 0 4px 20px rgba(103, 126, 234, 0.2);
        }

        .legacy-mobile-menu-btn i {
            font-size: 1.1rem;
            transition: var(--transition);
        }

        /* Legacy Menu Overlay - Modern Glass Design */
        .legacy-menu-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
            opacity: 0;
            visibility: hidden;
            transition: var(--transition);
            backdrop-filter: blur(4px);
        }

        .legacy-menu-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        /* Legacy Menu Sidebar - Modern Design */
        .legacy-menu-sidebar {
            position: fixed;
            top: 0;
            right: 0;
            width: 320px;
            max-width: 85vw;
            height: 100vh;
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border-left: 1px solid var(--glass-border);
            box-shadow: var(--shadow-strong);
            transform: translateX(100%);
            transition: var(--transition);
            z-index: 1000;
            display: flex;
            flex-direction: column;
        }

        .legacy-menu-overlay.active .legacy-menu-sidebar {
            transform: translateX(0);
        }

        /* Legacy Menu Header */
        .legacy-menu-header {
            padding: 1.5rem;
            border-bottom: 1px solid var(--glass-border);
            background: rgba(255, 255, 255, 0.05);
        }

        .legacy-menu-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .legacy-menu-subtitle {
            color: #64748b;
            font-size: 0.875rem;
        }

        /* Legacy Menu Search */
        .legacy-menu-search {
            position: relative;
            margin: 1rem;
        }

        .legacy-menu-search-input {
            width: 100%;
            padding: 0.75rem 2.5rem 0.75rem 1rem;
            border: 1px solid rgba(0, 0, 0, 0.1);
            border-radius: var(--border-radius);
            background: rgba(255, 255, 255, 0.8);
            color: #334155;
            font-size: 0.875rem;
            transition: var(--transition);
        }

        .legacy-menu-search-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(103, 126, 234, 0.1);
            background: rgba(255, 255, 255, 0.95);
        }

        .legacy-menu-search-icon {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
            pointer-events: none;
        }

        /* Legacy Menu Items */
        .legacy-menu-items {
            flex: 1;
            overflow-y: auto;
            padding: 1rem 0;
            
            /* Loading state */
            .spinner-border {
                width: 2rem;
                height: 2rem;
                border-width: 0.2em;
            }
            
            /* Menu items */
            .legacy-menu-item {
                display: flex;
                align-items: center;
                padding: 0.75rem 1.5rem;
                color: var(--legacy-menu-text);
                text-decoration: none;
                transition: all 0.2s ease;
                border-left: 3px solid transparent;
                
                &:hover, &.active {
                    background-color: rgba(255, 255, 255, 0.1);
                    border-left-color: var(--legacy-menu-accent);
                }
                
                .legacy-menu-item-icon {
                    width: 24px;
                    text-align: center;
                    margin-left: 0.5rem;
                    color: var(--legacy-menu-accent);
                }
                
                .legacy-menu-item-text {
                    flex: 1;
                    overflow: hidden;
                }
                
                .legacy-menu-item-title {
                    display: block;
                    font-weight: 500;
                }
                
                .legacy-menu-item-desc {
                    display: block;
                    font-size: 0.75rem;
                    opacity: 0.8;
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                }
                
                /* Chevron for items with children */
                .fa-chevron-down {
                    transition: transform 0.2s ease;
                    font-size: 0.8em;
                    opacity: 0.7;
                }
                
                /* Submenu styles */
                .legacy-submenu {
                    max-height: 0;
                    overflow: hidden;
                    transition: max-height 0.3s ease;
                    background-color: rgba(0, 0, 0, 0.1);
                    margin: 0 -1.5rem;
                    padding: 0 1.5rem 0 3rem;
                }
                
                /* Open state for items with children */
                &.open {
                    > a .fa-chevron-down {
                        transform: rotate(180deg);
                    }
                    
                    > .legacy-submenu {
                        max-height: 1000px; /* Adjust based on your needs */
                        padding: 0.5rem 1.5rem 0.5rem 3rem;
                    }
                }
            }
            
            /* Submenu items */
            .legacy-submenu-item {
                display: flex;
                align-items: center;
                padding: 0.5rem 0;
                color: var(--legacy-menu-text);
                text-decoration: none;
                opacity: 0.8;
                font-size: 0.9rem;
                transition: all 0.2s ease;
                
                &:hover {
                    opacity: 1;
                    color: var(--legacy-menu-accent);
                }
                
                i {
                    font-size: 0.6em;
                }
            }
        }

        .legacy-menu-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 0.75rem 1.5rem;
            color: #334155;
            text-decoration: none;
            transition: var(--transition);
            border-left: 3px solid transparent;
            margin: 0 1rem;
            border-radius: 0 var(--border-radius) var(--border-radius) 0;
        }

        .legacy-menu-item:hover {
            background: rgba(103, 126, 234, 0.1);
            border-left-color: #667eea;
            color: #667eea;
        }

        .legacy-menu-item.active {
            background: var(--primary-gradient);
            color: white;
            border-left-color: #667eea;
        }

        .legacy-menu-item-icon {
            width: 24px;
            text-align: center;
            font-size: 1.1rem;
        }

        .legacy-menu-item-text {
            flex: 1;
        }

        .legacy-menu-item-title {
            font-weight: 500;
            font-size: 0.95rem;
            display: block;
        }

        .legacy-menu-item-description {
            font-size: 0.8rem;
            color: #64748b;
            margin-top: 0.125rem;
        }

        .legacy-menu-item.active .legacy-menu-item-description {
            color: rgba(255, 255, 255, 0.8);
        }

        /* Legacy Menu Sub-items */
        .legacy-menu-subitems {
            background: rgba(0, 0, 0, 0.05);
            border-left: 2px solid #667eea;
            max-height: 0;
            overflow: hidden;
            transition: var(--transition);
        }

        .legacy-menu-item.has-children.open .legacy-menu-subitems {
            max-height: 300px;
        }

        .legacy-menu-subitem {
            padding: 0.5rem 1.5rem 0.5rem 3rem;
            color: #64748b;
            text-decoration: none;
            font-size: 0.875rem;
            display: block;
            transition: var(--transition);
        }

        .legacy-menu-subitem:hover {
            background: rgba(103, 126, 234, 0.05);
            color: #667eea;
        }

        /* Legacy Menu Footer */
        .legacy-menu-footer {
            padding: 1rem 1.5rem;
            border-top: 1px solid var(--glass-border);
            background: rgba(255, 255, 255, 0.05);
            text-align: center;
        }

        .legacy-menu-footer-text {
            color: #64748b;
            font-size: 0.8rem;
        }

        /* Legacy Menu Close Button */
        .legacy-menu-close {
            position: absolute;
            top: 1rem;
            left: 1rem;
            width: 40px;
            height: 40px;
            border: none;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            color: #64748b;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        .legacy-menu-close:hover {
            background: rgba(255, 255, 255, 0.2);
            color: #667eea;
        }

        /* Content Area Adjustments */
        .main-content {
            margin-top: 115px; /* Account for header + membership bar */
            padding: 2rem;
            min-height: calc(100vh - 115px);
        }

        /* Responsive Design */
        @media (min-width: 992px) {
            .legacy-menu-desktop {
                display: flex;
            }

            .legacy-mobile-menu-btn {
                display: none;
            }

            .main-content {
                margin-left: 0;
                margin-right: 0;
            }
        }

        @media (max-width: 991px) {
            .legacy-menu-desktop {
                display: none;
            }

            .legacy-mobile-menu-btn {
                display: flex;
            }

            .legacy-menu-sidebar {
                width: 100%;
                max-width: 100%;
            }

            .header-content {
                padding: 0 1rem;
            }

            .membership-content {
                padding: 0 1rem;
            }
        }

        @media (max-width: 768px) {
            .brand-logo {
                font-size: 1.25rem;
            }

            .brand-icon {
                width: 35px;
                height: 35px;
                font-size: 1rem;
            }

            .user-section {
                gap: 0.5rem;
            }

            .notification-btn, .user-btn {
                width: 40px;
                height: 40px;
            }

            .main-content {
                margin-top: 115px;
                padding: 1rem;
            }
        }

        /* Loading States */
        .legacy-menu-loading {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            color: #64748b;
        }

        /* Dark Theme Support */
        @media (prefers-color-scheme: dark) {
            :root {
                --glass-bg: rgba(15, 23, 42, 0.95);
                --glass-border: rgba(255, 255, 255, 0.1);
            }

            body {
                color: #e2e8f0;
            }

            .brand-logo {
                color: #f1f5f9;
            }

            .legacy-menu-item {
                color: #e2e8f0;
            }

            .legacy-menu-item-description {
                color: #94a3b8;
            }
        }
    </style>
</head>
<body>
    <!-- Glassmorphism Background -->
    <div class="app-background"></div>

    <form id="form1" runat="server">
        <!-- ASP.NET Essential Controls -->
        <act:ToolkitScriptManager ID="sm" runat="server" ScriptMode="Release" EnableScriptGlobalization="True" OnResolveScriptReference="sm_ResolveScriptReference" />
        <asp:SiteMapDataSource ID="SiteMapDataSource1" runat="server" ShowStartingNode="False" />

        <!-- Membership Top Bar -->
        <div class="membership-top-bar">
            <div class="membership-content">
                <div class="user-info">
                    <span class="welcome-text">مرحباً،</span>
                    <span class="username" id="currentUserName">المستخدم</span>
                </div>
                <div class="membership-actions">
                    <button class="membership-btn" onclick="showProfile()" title="الملف الشخصي">
                        <i class="fas fa-user"></i>
                        <span>الملف الشخصي</span>
                    </button>
                    <button class="membership-btn" onclick="showHistory()" title="السجل">
                        <i class="fas fa-history"></i>
                        <span>السجل</span>
                    </button>
                    <button class="membership-btn" onclick="showHelp()" title="المساعدة">
                        <i class="fas fa-question-circle"></i>
                        <span>المساعدة</span>
                    </button>
                    <button class="membership-btn" onclick="showSettings()" title="الإعدادات">
