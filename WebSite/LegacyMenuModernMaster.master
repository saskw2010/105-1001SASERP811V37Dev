    <!-- Legacy Menu Integration JavaScript -->
    <script type="text/javascript">
        // Global menu data and state
        window.LegacyMenu = {
            data: [],
            isLoaded: false,
            
            // Initialize the menu
            init: function() {
                this.loadMenuData();
                this.bindEvents();
            },
            
            // Load menu data from server
            loadMenuData: function() {
                const self = this;
                
                // Show loading state
                const menuItems = document.getElementById('legacyMenuItems');
                if (menuItems) {
                    menuItems.innerHTML = '<div class="text-center p-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">جاري التحميل...</span></div><p class="mt-2">جاري تحميل القائمة...</p></div>';
                }
                
                // Make AJAX call to get menu data
                $.ajax({
                    type: 'POST',
                    url: '/Services/MenuService.asmx/GetMenuData',
                    data: '{}',
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    success: function(response) {
                        try {
                            const result = typeof response.d === 'string' ? JSON.parse(response.d) : response.d;
                            if (result.success) {
                                self.data = result.data || [];
                                self.isLoaded = true;
                                self.renderMenu();
                                console.log('Menu data loaded successfully', self.data);
                            } else {
                                console.error('Error loading menu data:', result.message);
                                self.showError('حدث خطأ أثناء تحميل القائمة');
                            }
                        } catch (e) {
                            console.error('Error parsing menu data:', e);
                            self.showError('خطأ في معالجة بيانات القائمة');
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('AJAX Error:', status, error);
                        self.showError('فشل الاتصال بالخادم');
                    }
                });
            },
            
            // Render the menu based on loaded data
            renderMenu: function() {
                const menuItems = document.getElementById('legacyMenuItems');
                if (!menuItems) return;
                
                let html = '';
                
                this.data.forEach(function(item) {
                    if (item.hasChildren) {
                        // Menu item with children
                        html += `
                        <div class="legacy-menu-item has-children">
                            <a href="${item.url || '#'}" class="d-flex align-items-center">
                                <i class="${item.icon || 'fas fa-folder'} legacy-menu-item-icon"></i>
                                <div class="legacy-menu-item-text">
                                    <span class="legacy-menu-item-title">${item.title}</span>
                                    <small class="legacy-menu-item-desc">${item.description || ''}</small>
                                </div>
                                <i class="fas fa-chevron-down ms-auto"></i>
                            </a>
                            <div class="legacy-submenu">`;
                        
                        // Add children
                        if (item.children && item.children.length > 0) {
                            item.children.forEach(function(child) {
                                html += `
                                <a href="${child.url || '#'}" class="legacy-submenu-item">
                                    <i class="${child.icon || 'fas fa-circle'} me-2"></i>
                                    <span>${child.title}</span>
                                </a>`;
                            });
                        }
                        
                        html += `
                            </div>
                        </div>`;
                    } else {
                        // Single menu item
                        const isActive = window.location.pathname.toLowerCase() === item.url.toLowerCase();
                        html += `
                        <a href="${item.url || '#'}" class="legacy-menu-item ${isActive ? 'active' : ''}">
                            <i class="${item.icon || 'fas fa-circle'} legacy-menu-item-icon"></i>
                            <div class="legacy-menu-item-text">
                                <span class="legacy-menu-item-title">${item.title}</span>
                                ${item.description ? `<small class="legacy-menu-item-desc">${item.description}</small>` : ''}
                            </div>
                        </a>`;
                    }
                });
                
                menuItems.innerHTML = html || '<div class="p-3 text-muted">لا توجد عناصر في القائمة</div>';
                this.initializeSubmenus();
            },
            
            // Initialize submenu toggles
            initializeSubmenus: function() {
                document.querySelectorAll('.legacy-menu-item.has-children > a').forEach(function(link) {
                    link.addEventListener('click', function(e) {
                        // Only prevent default if it's a dropdown toggle
                        if (this.getAttribute('href') === '#') {
                            e.preventDefault();
                        }
                        this.parentElement.classList.toggle('open');
                    });
                });
            },
            
            // Show error message
            showError: function(message) {
                const menuItems = document.getElementById('legacyMenuItems');
                if (menuItems) {
                    menuItems.innerHTML = `
                        <div class="alert alert-danger m-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            ${message}
                            <button class="btn btn-sm btn-outline-secondary ms-2" onclick="LegacyMenu.loadMenuData()">
                                <i class="fas fa-sync-alt me-1"></i> إعادة المحاولة
                            </button>
                        </div>`;
                }
            },
            
            // Bind events
            bindEvents: function() {
                const self = this;
                
                // Refresh menu button
                const refreshBtn = document.getElementById('refreshMenuBtn');
                if (refreshBtn) {
                    refreshBtn.addEventListener('click', function() {
                        self.loadMenuData();
                    });
                }
            }
        };
        
        // Legacy Menu Toggle Function
        function toggleLegacyMenu() {
            const overlay = document.getElementById('legacyMenuOverlay');
            const sidebar = document.getElementById('legacyMenuSidebar');

            if (overlay && sidebar) {
                overlay.classList.toggle('active');
                sidebar.classList.toggle('active');
                document.body.style.overflow = sidebar.classList.contains('active') ? 'hidden' : '';
            }
        }

        function closeLegacyMenu() {
            const overlay = document.getElementById('legacyMenuOverlay');
            const sidebar = document.getElementById('legacyMenuSidebar');

            if (overlay && sidebar) {
                overlay.classList.remove('active');
                sidebar.classList.remove('active');
                document.body.style.overflow = '';
            }
        }

        function toggleLegacySubMenu(item) {
            item.classList.toggle('open');
        }

        function toggleDropdown(item) {
            // Close all other dropdowns first
            document.querySelectorAll('.legacy-nav-item').forEach(navItem => {
                if (navItem !== item) {
                    navItem.classList.remove('dropdown-open');
                }
            });

            // Toggle current dropdown
            item.classList.toggle('dropdown-open');
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.legacy-nav-item')) {
                document.querySelectorAll('.legacy-nav-item').forEach(item => {
                    item.classList.remove('dropdown-open');
