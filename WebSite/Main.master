                        console.log('âœ… Found culture selector, showing it');
                        // Trigger the hover event to show culture options
                        if (typeof $showHover === 'function') {
                            const cultureLinkElement = document.querySelector('.CultureLink a');
                            if (cultureLinkElement) {
                                $showHover(cultureLinkElement, 'Membership$Cultures', 'CultureSelector', 1);
                                return;
                            }
                        }
                    }
                }
                
                // Method 2: Direct click on CultureLink
                const cultureLink = document.querySelector('.CultureLink a');
                if (cultureLink) {
                    console.log('âœ… Found CultureLink, clicking it');
                    // Simulate mouse events to trigger the hover menu
                    const mouseOverEvent = new MouseEvent('mouseover', { bubbles: true, cancelable: true });
                    const clickEvent = new MouseEvent('click', { bubbles: true, cancelable: true });
                    cultureLink.dispatchEvent(mouseOverEvent);
                    setTimeout(() => cultureLink.dispatchEvent(clickEvent), 50);
                    return;
                }
                
                // Method 3: Try to find the culture selector dropdown
                const membershipBar = document.getElementById('Membership_Login');
                if (membershipBar) {
                    const langLink = membershipBar.querySelector('a[title*="language"], a[onclick*="toggleHover"]');
                    if (langLink) {
                        console.log('âœ… Found language link via fallback');
                        langLink.click();
                        return;
                    }
                }
                
                console.warn('âš ï¸ No language selector method worked');
            } catch (e) {
                console.error('âŒ Error toggling language:', e);
            }
        }
    </script>
    
