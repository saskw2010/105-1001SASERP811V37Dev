<?xml version="1.0" encoding="utf-8"?>
<dataController name="EVOL_Memo" conflictDetection="overwriteChanges" label="EVOL Memo" plugIn="eZee.Data.AnnotationPlugIn" handler="eZee.Rules.EVOL_MemoBusinessRules" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"EVOL_Memo"."ID" "ID"
	,"EVOL_Memo"."title" "title"
	,"EVOL_Memo"."CategoryID" "CategoryID"
	,"Category"."Categoryname" "CategoryCategoryname"
	,"EVOL_Memo"."Notes" "Notes"
	,"EVOL_Memo"."ModifiedBy" "ModifiedBy"
	,"EVOL_Memo"."ModifiedOn" "ModifiedOn"
	,"EVOL_Memo"."CreatedBy" "CreatedBy"
	,"EVOL_Memo"."CreatedOn" "CreatedOn"
	,"EVOL_Memo"."SendTo" "SendTo"
	,"EVOL_Memo"."SendToEmail" "SendToEmail"
	,"EVOL_Memo"."Urllink" "Urllink"
from "dbo"."EVOL_Memo" "EVOL_Memo"
	left join "dbo"."EVOL_MemoCategory" "Category" on "EVOL_Memo"."CategoryID" = "Category"."CategoryID"
]]></text>
    </command>
    <command id="IDIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="ID" />
      </output>
    </command>
  </commands>
  <fields>
    <field name="ID" type="Int64" allowNulls="false" isPrimaryKey="true" label="Id" readOnly="true" />
    <field name="title" type="String" label="Title" length="400" showInSummary="true" />
    <field name="CategoryID" type="Int32" label="Category#" showInSummary="true">
      <items style="Lookup" dataController="EVOL_MemoCategory" newDataView="createForm1" searchOnStart="true" />
    </field>
    <field name="CategoryCategoryname" type="String" readOnly="true" label="Category Categoryname" length="100" />
    <field name="Notes" type="String" allowQBE="false" allowSorting="false" label="Notes" showInSummary="true" />
    <field name="ModifiedBy" type="String" label="Modified By" length="50" showInSummary="true" />
    <field name="ModifiedOn" type="DateTime" label="Modified On" showInSummary="true" />
    <field name="CreatedBy" type="String" label="Created By" length="50" />
    <field name="CreatedOn" type="DateTime" label="Created On" />
    <field name="SendTo" type="String" label="Send To" length="50">
      <items style="Lookup" dataController="vwaspnetUsers" dataView="grid1" dataTextField="UserName" dataValueField="UserName" copy="SendToEmail=Email" />
    </field>
    <field name="SendToEmail" type="String" label="Send To Email" length="50" />
    <field name="Urllink" type="String" allowQBE="false" allowSorting="false" label="Urllink" length="50" computed="true">
      <formula>@BusinessRules_UserEmail</formula>
    </field>
    <field name="CurrentUserName" type="String" readOnly="true" label="Current User" allowQBE="false" allowSorting="false" computed="true" htmlEncode="false" hidden="false" length="40">
      <items letters="false" />
      <formula>@BusinessRules_UserName</formula>
    </field>
    <field name="userlist" type="String" allowNulls="false" label="userlist" allowQBE="false" allowSorting="false" computed="true" htmlEncode="false" hidden="false" length="50">
      <items style="CheckBoxList" dataController="user_details" dataView="grid2" dataTextField="FirstName" dataValueField="UserName" targetController="EVOLMemo" letters="false" />
      <formula>Null</formula>
    </field>
  </fields>
  <views>
    <view id="editForm1" type="Form" commandId="command1" label="Review EVOL Memo">
      <headerText>$DefaultEditViewDescription</headerText>
      <categories>
        <category id="c1" headerText="EVOL Memo" flow="NewColumn"  newColumn="true">
          <description><![CDATA[$DefaultEditDescription]]></description>
          <dataFields>
            <dataField fieldName="title" />
            <dataField fieldName="CategoryID" aliasFieldName="CategoryCategoryname" hyperlinkFormatString="~/Pages/EVOL_MemoCategory.aspx?CategoryID={CategoryID}&amp;_controller=EVOL_MemoCategory&amp;_commandName=Select&amp;_commandArgument=editForm1" />
            <dataField fieldName="Notes" rows="5" textMode="RichText" columns="50" />
            <dataField fieldName="ModifiedBy" columns="50" />
            <dataField fieldName="ModifiedOn" columns="10" />
            <dataField fieldName="CreatedBy" columns="50" />
            <dataField fieldName="CreatedOn" columns="10" />
            <dataField fieldName="SendTo" columns="50" />
            <dataField fieldName="SendToEmail" columns="50" />
            <dataField fieldName="Urllink" rows="5" />
            <dataField fieldName="CurrentUserName" columns="40" />
            <dataField fieldName="userlist" columns="5" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="createForm1" type="Form" commandId="command1" label="New EVOL Memo">
      <headerText>$DefaultCreateViewDescription</headerText>
      <categories>
        <category id="c1" headerText="New EVOL Memo" flow="NewColumn"  newColumn="true">
          <description><![CDATA[$DefaultNewDescription]]></description>
          <dataFields>
            <dataField fieldName="title" />
            <dataField fieldName="CategoryID" aliasFieldName="CategoryCategoryname" />
            <dataField fieldName="Notes" rows="5" columns="50" textMode="RichText" />
            <dataField fieldName="ModifiedBy" columns="50" />
            <dataField fieldName="ModifiedOn" columns="10" />
            <dataField fieldName="CreatedBy" columns="50" />
            <dataField fieldName="CreatedOn" columns="10" />
            <dataField fieldName="SendTo" columns="50" />
            <dataField fieldName="SendToEmail" columns="50" />
            <dataField fieldName="Urllink" rows="5" />
            <dataField fieldName="CurrentUserName" columns="40" />
            <dataField fieldName="userlist" columns="5" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="grid1" type="Grid" commandId="command1" label="EVOL Memo" sortExpression="ID desc">
      <headerText>$DefaultGridViewDescription</headerText>
      <dataFields>
        <dataField fieldName="ID" />
        <dataField fieldName="title" />
        <dataField fieldName="CategoryID" aliasFieldName="CategoryCategoryname" hyperlinkFormatString="~/Pages/EVOL_MemoCategory.aspx?CategoryID={CategoryID}&amp;_controller=EVOL_MemoCategory&amp;_commandName=Select&amp;_commandArgument=editForm1" />
        <dataField fieldName="ModifiedBy" columns="50" />
        <dataField fieldName="ModifiedOn" columns="10" />
        <dataField fieldName="CreatedBy" columns="50" />
        <dataField fieldName="CreatedOn" columns="10" />
        <dataField fieldName="SendTo" columns="50" />
        <dataField fieldName="SendToEmail" columns="50" />
        <dataField fieldName="Urllink" rows="5" />
        <dataField fieldName="CurrentUserName" columns="40" />
      </dataFields>
    </view>
    <view id="Totalmessages" commandId="command1" type="Grid" label="ALL INBOX" sortExpression="ID">
      <dataFields>
        <dataField fieldName="ID" />
        <dataField fieldName="title" />
        <dataField fieldName="CategoryID" aliasFieldName="CategoryCategoryname" hyperlinkFormatString="~/Pages/EVOL_MemoCategory.aspx?CategoryID={CategoryID}&amp;_controller=EVOL_MemoCategory&amp;_commandName=Select&amp;_commandArgument=editForm1" />
        <dataField fieldName="ModifiedBy" columns="50" />
        <dataField fieldName="ModifiedOn" columns="10" />
        <dataField fieldName="CreatedBy" columns="50" />
        <dataField fieldName="CreatedOn" columns="10" />
        <dataField fieldName="SendTo" columns="50" />
        <dataField fieldName="CurrentUserName" columns="40" />
      </dataFields>
    </view>
  </views>
