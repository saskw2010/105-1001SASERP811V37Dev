  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"UserBankPay"."BankPayID" "BankPayID"
	,"UserBankPay"."UserID" "UserID"
	,"User"."LoginName" "UserLoginName"
	,"UserBankPay"."BankID" "BankID"
	,"Bank"."BankName" "BankBankName"
	,"UserBankPay"."Amount" "Amount"
	,"UserBankPay"."VoucherNO" "VoucherNO"
	,"UserBankPay"."Status" "Status"
	,"UserBankPay"."AdminID" "AdminID"
	,"UserBankPay"."ModifiedBy" "ModifiedBy"
	,"UserBankPay"."ModifiedByUserId" "ModifiedByUserId"
	,"UserBankPay"."ModifiedOn" "ModifiedOn"
	,"UserBankPay"."CreatedBy" "CreatedBy"
	,"UserBankPay"."CreatedById" "CreatedById"
	,"UserBankPay"."CreatedOn" "CreatedOn"
from "dbo"."UserBankPay" "UserBankPay"
	left join "dbo"."UserData" "User" on "UserBankPay"."UserID" = "User"."UserID"
	left join "dbo"."BankData" "Bank" on "UserBankPay"."BankID" = "Bank"."BankID"
]]></text>
    </command>
    <command id="BankPayIDIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="BankPayID" />
      </output>
    </command>
  </commands>
