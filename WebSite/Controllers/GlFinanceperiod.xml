  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"GlFinanceperiod"."GlFinperiodID" "GlFinperiodID"
	,"GlFinanceperiod"."Fin_period_info" "Fin_period_info"
	,"GlFinanceperiod"."Fin_period_Strat" "Fin_period_Strat"
	,"GlFinanceperiod"."Fin_period_end" "Fin_period_end"
	,"GlFinanceperiod"."closedperiod" "closedperiod"
	,"GlFinanceperiod"."accountnumber" "accountnumber"
	,"accountnumber"."Acc_Nm" "accountnumberAcc_Nm"
	,"accountnumberClsacc_"."Acc_Nm" "accountnumberClsacc_Acc_Nm"
	,"accountnumberAcc_Bnd"."Acc_Nm" "accountnumberAcc_BndAcc_Nm"
	,"accountnumberAcc_Bndaccclass"."accountclass" "accountnumberAcc_Bndaccclassaccountclass"
	,"accountnumberAcc_BndAcc_Bab"."Acc_Nm" "accountnumberAcc_BndAcc_BabAcc_Nm"
from "dbo"."GlFinanceperiod" "GlFinanceperiod"
	left join "dbo"."GLmstrfl" "accountnumber" on "GlFinanceperiod"."accountnumber" = "accountnumber"."Acc_No"
	left join "dbo"."GLmfbab" "accountnumberClsacc_" on "accountnumber"."Clsacc_No" = "accountnumberClsacc_"."Acc_Bab"
	left join "dbo"."GLmfband" "accountnumberAcc_Bnd" on "accountnumber"."Acc_Bnd" = "accountnumberAcc_Bnd"."Acc_Bnd"
	left join "dbo"."accountclasslist" "accountnumberAcc_Bndaccclass" on "accountnumberAcc_Bnd"."accclass" = "accountnumberAcc_Bndaccclass"."accountclassid"
	left join "dbo"."GLmfbab" "accountnumberAcc_BndAcc_Bab" on "accountnumberAcc_Bnd"."Acc_Bab" = "accountnumberAcc_BndAcc_Bab"."Acc_Bab"
]]></text>
    </command>
    <command id="GlFinperiodIDIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="GlFinperiodID" />
      </output>
    </command>
  </commands>
