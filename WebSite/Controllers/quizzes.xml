            <dataField fieldName="quiz_name" />
            <dataField fieldName="quiz_desc" />
            <dataField fieldName="added_date" columns="10" />
            <dataField fieldName="parent_id" columns="15" />
            <dataField fieldName="intro_text" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="createForm1" type="Form" commandId="command1" label="New Quizzes">
      <headerText>$DefaultCreateViewDescription</headerText>
      <categories>
        <category id="c1" headerText="New Quizzes" flow="NewColumn"  newColumn="true">
          <description><![CDATA[$DefaultNewDescription]]></description>
          <dataFields>
            <dataField fieldName="cat_id" columns="15" />
            <dataField fieldName="quiz_name" />
            <dataField fieldName="quiz_desc" />
            <dataField fieldName="added_date" columns="10" />
            <dataField fieldName="parent_id" columns="15" />
            <dataField fieldName="intro_text" />
          </dataFields>
        </category>
      </categories>
    </view>
  </views>
  <actions>
