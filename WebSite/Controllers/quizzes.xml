<?xml version="1.0" encoding="utf-8"?>
<dataController name="quizzes" conflictDetection="overwriteChanges" label="Quizzes" plugIn="eZee.Data.AnnotationPlugIn" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"quizzes"."id" "id"
	,"quizzes"."cat_id" "cat_id"
	,"quizzes"."quiz_name" "quiz_name"
	,"quizzes"."quiz_desc" "quiz_desc"
	,"quizzes"."added_date" "added_date"
	,"quizzes"."parent_id" "parent_id"
	,"quizzes"."intro_text" "intro_text"
from "dbo"."quizzes" "quizzes"
]]></text>
    </command>
    <command id="idIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="id" />
      </output>
    </command>
  </commands>
  <fields>
    <field name="id" type="Int32" allowNulls="false" isPrimaryKey="true" label="Id" readOnly="true" />
    <field name="cat_id" type="Int32" allowNulls="false" label="Cat#" showInSummary="true" />
    <field name="quiz_name" type="String" allowNulls="false" label="Quiz Name" length="500" showInSummary="true" />
    <field name="quiz_desc" type="String" allowNulls="false" label="Quiz Desc" length="500" showInSummary="true" />
    <field name="added_date" type="DateTime" allowNulls="false" default="(getdate())" label="Added Date" showInSummary="true" />
    <field name="parent_id" type="Int32" allowNulls="false" default="((0))" label="Parent#" showInSummary="true" />
    <field name="intro_text" type="String" label="Intro Text" length="1850" />
  </fields>
  <views>
    <view id="grid1" type="Grid" commandId="command1" label="Quizzes">
      <headerText>$DefaultGridViewDescription</headerText>
      <dataFields>
        <dataField fieldName="cat_id" columns="15" />
        <dataField fieldName="quiz_name" />
        <dataField fieldName="quiz_desc" />
        <dataField fieldName="added_date" columns="10" />
        <dataField fieldName="parent_id" columns="15" />
        <dataField fieldName="intro_text" />
      </dataFields>
    </view>
    <view id="editForm1" type="Form" commandId="command1" label="Review Quizzes">
      <headerText>$DefaultEditViewDescription</headerText>
      <categories>
