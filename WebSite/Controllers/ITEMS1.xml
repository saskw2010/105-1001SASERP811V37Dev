 <rule id="r107" commandName="Calculate" type="Sql" phase="Execute">
  <![CDATA[
--declare @sumtotal money
-- execute stored procedure
if @IDGROUP is not null  
begin
if @ID_USER is null  or len(@ID_USER)= 1
begin
set @ID_USER=0
declare @maxidusre nvarchar(50)
declare @itmcount bigint=0 
Set @itmcount=(select  count(*) FROM items )
if @itmcount>0
begin
declare @maxlen bigint=0
set @maxlen=(select max(len(id_user)) from items)
set @maxidusre=(select  max(ID_USER) FROM  items  where  len(id_user)=@maxlen)
set @maxidusre=@maxidusre+1
set @ID_USER= @maxidusre
end
if @itmcount=0
begin
set @ID_USER= (select  concat(@IDGROUP,'0001'))


end 
end
end

