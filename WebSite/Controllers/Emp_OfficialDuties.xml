	,"Emp_OfficialDuties"."End_Date" "End_Date"
	,"Emp_OfficialDuties"."Last_Modified" "Last_Modified"
	,"Emp_OfficialDuties"."ShiftCategory" "ShiftCategory"
from "dbo"."Emp_OfficialDuties" "Emp_OfficialDuties"
	left join "dbo"."Official_Duties" "OffDuty_S" on "Emp_OfficialDuties"."OffDuty_SID" = "OffDuty_S"."SID"
]]></text>
    </command>
    <command id="SIDIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="SID" />
      </output>
    </command>
  </commands>
