    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Emp_OfficialDuties"."SID" "SID"
	,"Emp_OfficialDuties"."Emp_SID" "Emp_SID"
	,"Emp_OfficialDuties"."OffDuty_SID" "OffDuty_SID"
	,"OffDuty_S"."Official_Code" "OffDuty_SOfficial_Code"
