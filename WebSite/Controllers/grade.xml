	,"grade"."mariege_allow_married" "mariege_allow_married"
	,"grade"."work_allow_prcnt" "work_allow_prcnt"
	,"grade"."work_allow_amount" "work_allow_amount"
	,"grade"."represent_allow_prcnt" "represent_allow_prcnt"
	,"grade"."represent_allow_amount" "represent_allow_amount"
	,"grade"."annual_allow_value" "annual_allow_value"
	,"grade"."annual_allow_times" "annual_allow_times"
	,"grade"."co_code" "co_code"
	,"grade"."user_no" "user_no"
	,"grade"."op_date" "op_date"
	,"grade"."Earning_No" "Earning_No"
	,"Earning_"."Earning_Nm" "Earning_Earning_Nm"
	,"grade"."ModifiedBy" "ModifiedBy"
	,"grade"."ModifiedOn" "ModifiedOn"
	,"grade"."CreatedBy" "CreatedBy"
	,"grade"."CreatedOn" "CreatedOn"
from "dbo"."grade" "grade"
	left join "dbo"."Pyerntsalyp1" "Earning_" on "grade"."Earning_No" = "Earning_"."Earning_No"
]]></text>
    </command>
  </commands>
