    <command id="command1" type="Text">
      <text><![CDATA[
select
	"grade"."grade_code" "grade_code"
	,"grade"."grade_desc_a" "grade_desc_a"
	,"grade"."low_boundary" "low_boundary"
	,"grade"."high_boundary" "high_boundary"
	,"grade"."min_spent_years" "min_spent_years"
