    </field>
    <field name="catalog_catalog_name" type="String" readOnly="true" label="Catalog Name" length="50" />
    <field name="catalog_level_name" type="String" label="Catalog Level Name" length="50" showInSummary="true" />
    <field name="catalog_level_description" type="String" label="Catalog Level Description" length="255" showInSummary="true" />
  </fields>
