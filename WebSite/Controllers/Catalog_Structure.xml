<?xml version="1.0" encoding="utf-8"?>
<dataController name="Catalog_Structure" conflictDetection="overwriteChanges" label="Catalog Structure" plugIn="eZee.Data.AnnotationPlugIn" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Catalog_Structure"."catalog_level_number" "catalog_level_number"
	,"Catalog_Structure"."catalog_id" "catalog_id"
	,"catalog_"."catalog_name" "catalog_catalog_name"
	,"Catalog_Structure"."catalog_level_name" "catalog_level_name"
	,"Catalog_Structure"."catalog_level_description" "catalog_level_description"
from "dbo"."Catalog_Structure" "Catalog_Structure"
	left join "dbo"."Catalogs" "catalog_" on "Catalog_Structure"."catalog_id" = "catalog_"."catalog_id"
]]></text>
    </command>
  </commands>
