  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"tbl_subgroup"."id" "id"
	,"tbl_subgroup"."NameAr" "NameAr"
	,"tbl_subgroup"."NameEn" "NameEn"
	,"tbl_subgroup"."Picture" "Picture"
	,"tbl_subgroup"."CountryId" "CountryId"
	,"Country"."NameAr" "CountryNameAr"
	,"tbl_subgroup"."ContentAr" "ContentAr"
	,"tbl_subgroup"."ContentEn" "ContentEn"
from "dbo"."tbl_subgroup" "tbl_subgroup"
	left join "dbo"."tbl_groups" "Country" on "tbl_subgroup"."CountryId" = "Country"."id"
]]></text>
    </command>
    <command id="idIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
