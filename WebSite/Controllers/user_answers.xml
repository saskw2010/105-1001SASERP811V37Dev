<?xml version="1.0" encoding="utf-8"?>
<dataController name="user_answers" conflictDetection="overwriteChanges" label="User Answers" plugIn="eZee.Data.AnnotationPlugIn" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"user_answers"."id" "id"
	,"user_answers"."user_quiz_id" "user_quiz_id"
	,"user_quiz_"."finish_date" "user_quiz_finish_date"
	,"user_quiz_assignment_"."show_results" "user_quiz_assignment_show_results"
	,"user_answers"."question_id" "question_id"
	,"user_answers"."answer_id" "answer_id"
	,"user_answers"."user_answer_id" "user_answer_id"
	,"user_answers"."user_answer_text" "user_answer_text"
	,"user_answers"."added_date" "added_date"
from "dbo"."user_answers" "user_answers"
	left join "dbo"."user_quizzes" "user_quiz_" on "user_answers"."user_quiz_id" = "user_quiz_"."id"
	left join "dbo"."assignments" "user_quiz_assignment_" on "user_quiz_"."assignment_id" = "user_quiz_assignment_"."id"
]]></text>
    </command>
    <command id="idIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="id" />
      </output>
    </command>
  </commands>
  <fields>
    <field name="id" type="Int32" allowNulls="false" isPrimaryKey="true" label="Id" readOnly="true" />
    <field name="user_quiz_id" type="Int32" allowNulls="false" label="User Quiz#" showInSummary="true">
      <items style="Lookup" dataController="user_quizzes" newDataView="createForm1" searchOnStart="true" />
    </field>
    <field name="user_quiz_finish_date" type="DateTime" readOnly="true" label="User Quiz Finish Date" />
    <field name="user_quiz_assignment_show_results" type="Int32" readOnly="true" label="User Quiz Assignment Show Results" />
    <field name="question_id" type="Int32" allowNulls="false" label="Question#" showInSummary="true" />
    <field name="answer_id" type="Int32" allowNulls="false" label="Answer#" showInSummary="true" />
    <field name="user_answer_id" type="Int32" allowNulls="false" label="User Answer#" showInSummary="true" />
    <field name="user_answer_text" type="String" allowNulls="false" allowQBE="false" allowSorting="false" label="User Answer Text" length="3500" showInSummary="true" />
    <field name="added_date" type="DateTime" allowNulls="false" default="(getdate())" label="Added Date" />
  </fields>
  <views>
    <view id="grid1" type="Grid" commandId="command1" label="User Answers">
      <headerText>$DefaultGridViewDescription</headerText>
      <dataFields>
        <dataField fieldName="user_quiz_id" aliasFieldName="user_quiz_finish_date" />
        <dataField fieldName="question_id" columns="15" />
        <dataField fieldName="answer_id" columns="15" />
        <dataField fieldName="user_answer_id" columns="15" />
        <dataField fieldName="user_answer_text" rows="5" />
        <dataField fieldName="added_date" columns="10" />
        <dataField fieldName="user_quiz_assignment_show_results" columns="15" />
      </dataFields>
    </view>
    <view id="editForm1" type="Form" commandId="command1" label="Review User Answers">
      <headerText>$DefaultEditViewDescription</headerText>
      <categories>
        <category id="c1" headerText="User Answers" flow="NewColumn"  newColumn="true">
          <description><![CDATA[$DefaultEditDescription]]></description>
          <dataFields>
            <dataField fieldName="user_quiz_id" aliasFieldName="user_quiz_finish_date" hyperlinkFormatString="~/Pages/user_quizzes.aspx?id={user_quiz_id}&amp;_controller=user_quizzes&amp;_commandName=Select&amp;_commandArgument=editForm1" />
            <dataField fieldName="question_id" columns="15" />
            <dataField fieldName="answer_id" columns="15" />
            <dataField fieldName="user_answer_id" columns="15" />
            <dataField fieldName="user_answer_text" rows="5" />
            <dataField fieldName="added_date" columns="10" />
          </dataFields>
        </category>
        <category id="c2" headerText="Reference Information">
          <description><![CDATA[$DefaultReferenceDescription]]></description>
          <dataFields>
            <dataField fieldName="user_quiz_assignment_show_results" columns="15" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="createForm1" type="Form" commandId="command1" label="New User Answers">
      <headerText>$DefaultCreateViewDescription</headerText>
      <categories>
        <category id="c1" headerText="New User Answers" flow="NewColumn"  newColumn="true">
          <description><![CDATA[$DefaultNewDescription]]></description>
          <dataFields>
            <dataField fieldName="user_quiz_id" aliasFieldName="user_quiz_finish_date" />
            <dataField fieldName="question_id" columns="15" />
            <dataField fieldName="answer_id" columns="15" />
            <dataField fieldName="user_answer_id" columns="15" />
            <dataField fieldName="user_answer_text" rows="5" />
            <dataField fieldName="added_date" columns="10" />
          </dataFields>
        </category>
      </categories>
    </view>
  </views>
