  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Duty_Shifts"."SID" "SID"
	,"Duty_Shifts"."Shift_Code" "Shift_Code"
	,"Duty_Shifts"."Shift_Desc" "Shift_Desc"
	,"Duty_Shifts"."Shift_Desc_EN" "Shift_Desc_EN"
	,"Duty_Shifts"."Start_Date" "Start_Date"
	,"Duty_Shifts"."End_Date" "End_Date"
	,"Duty_Shifts"."Duty_SID" "Duty_SID"
	,"Duty_S"."Duty_Code" "Duty_SDuty_Code"
	,"Duty_SDuty_Type_S"."Duty_Code" "Duty_SDuty_Type_SDuty_Code"
	,"Duty_Shifts"."Shift_Type_SID" "Shift_Type_SID"
	,"Shift_Type_S"."Shift_Type_Desc" "Shift_Type_SShift_Type_Desc"
	,"Duty_Shifts"."Start_Time" "Start_Time"
	,"Duty_Shifts"."Work_Hours" "Work_Hours"
	,"Duty_Shifts"."Off_Hours" "Off_Hours"
	,"Duty_Shifts"."IsActive" "IsActive"
from "dbo"."Duty_Shifts" "Duty_Shifts"
	left join "dbo"."Duties" "Duty_S" on "Duty_Shifts"."Duty_SID" = "Duty_S"."SID"
	left join "dbo"."Duty_Types" "Duty_SDuty_Type_S" on "Duty_S"."Duty_Type_SID" = "Duty_SDuty_Type_S"."SID"
	left join "dbo"."Shift_Types" "Shift_Type_S" on "Duty_Shifts"."Shift_Type_SID" = "Shift_Type_S"."SID"
]]></text>
    </command>
    <command id="SIDIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="SID" />
      </output>
    </command>
  </commands>
