    <field name="newsId" type="Int32" label="news#" showInSummary="true">
      <items style="Lookup" dataController="tbl_News" newDataView="createForm1" searchOnStart="true" />
    </field>
    <field name="newsnewTitle" type="String" readOnly="true" label="newsnew Title" length="50" />
    <field name="newsDetail" type="String" allowQBE="false" allowSorting="false" label="news Detail" length="8000" showInSummary="true" />
    <field name="ModifiedBy" type="String" label="Modified By" length="50" showInSummary="true" />
    <field name="ModifiedOn" type="DateTime" label="Modified On" showInSummary="true" />
    <field name="CreatedBy" type="String" label="Created By" length="50" showInSummary="true" />
    <field name="CreatedOn" type="DateTime" label="Created On" />
  </fields>
