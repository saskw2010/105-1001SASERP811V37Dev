<?xml version="1.0" encoding="utf-8"?>
<dataController name="tbl_NewsDetail" conflictDetection="overwriteChanges" label="tbl News Detail" plugIn="eZee.Data.AnnotationPlugIn" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"tbl_NewsDetail"."dtlId" "dtlId"
	,"tbl_NewsDetail"."newsId" "newsId"
	,"news"."newTitle" "newsnewTitle"
	,"tbl_NewsDetail"."newsDetail" "newsDetail"
	,"tbl_NewsDetail"."ModifiedBy" "ModifiedBy"
	,"tbl_NewsDetail"."ModifiedOn" "ModifiedOn"
	,"tbl_NewsDetail"."CreatedBy" "CreatedBy"
	,"tbl_NewsDetail"."CreatedOn" "CreatedOn"
from "dbo"."tbl_NewsDetail" "tbl_NewsDetail"
	left join "dbo"."tbl_News" "news" on "tbl_NewsDetail"."newsId" = "news"."newsId"
]]></text>
    </command>
    <command id="dtlIdIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="dtlId" />
      </output>
    </command>
  </commands>
  <fields>
