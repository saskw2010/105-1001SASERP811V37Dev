<?xml version="1.0" encoding="utf-8"?>
<dataController name="answers" conflictDetection="overwriteChanges" label="Answers" plugIn="eZee.Data.AnnotationPlugIn" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"answers"."id" "id"
	,"answers"."group_id" "group_id"
	,"group_"."group_name" "group_group_name"
	,"group_question_"."question_text" "group_question_question_text"
	,"group_question_quiz_"."quiz_name" "group_question_quiz_quiz_name"
	,"answers"."answer_text" "answer_text"
	,"answers"."answer_image" "answer_image"
	,"answers"."correct_answer" "correct_answer"
	,"answers"."priority" "priority"
	,"answers"."correct_answer_text" "correct_answer_text"
	,"answers"."answer_pos" "answer_pos"
	,"answers"."parent_id" "parent_id"
	,"answers"."answer_text_eng" "answer_text_eng"
	,"answers"."control_type" "control_type"
	,"answers"."answer_parent_id" "answer_parent_id"
	,"answers"."text_unit" "text_unit"
from "dbo"."answers" "answers"
	left join "dbo"."question_groups" "group_" on "answers"."group_id" = "group_"."id"
	left join "dbo"."questions" "group_question_" on "group_"."question_id" = "group_question_"."id"
	left join "dbo"."quizzes" "group_question_quiz_" on "group_question_"."quiz_id" = "group_question_quiz_"."id"
]]></text>
    </command>
    <command id="idIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="id" />
      </output>
    </command>
  </commands>
  <fields>
    <field name="id" type="Int32" allowNulls="false" isPrimaryKey="true" label="Id" readOnly="true" />
    <field name="group_id" type="Int32" allowNulls="false" label="Group#" showInSummary="true">
      <items style="Lookup" dataController="question_groups" newDataView="createForm1" searchOnStart="true" />
    </field>
    <field name="group_group_name" type="String" readOnly="true" label="Group Name" length="450" />
    <field name="group_question_question_text" type="String" readOnly="true" label="Group Question Text" length="1800" />
    <field name="group_question_quiz_quiz_name" type="String" readOnly="true" label="Group Question Quiz Name" length="500" />
    <field name="answer_text" type="String" label="Answer Text" length="800" showInSummary="true" />
    <field name="answer_image" type="String" label="Answer Image" length="450" showInSummary="true" />
    <field name="correct_answer" type="Int32" allowNulls="false" label="Correct Answer" showInSummary="true" />
    <field name="priority" type="Int32" label="Priority" showInSummary="true" />
    <field name="correct_answer_text" type="String" label="Correct Answer Text" length="800" />
    <field name="answer_pos" type="Int32" allowNulls="false" default="((1))" label="Answer Pos" />
    <field name="parent_id" type="Int32" allowNulls="false" default="((0))" label="Parent#" />
    <field name="answer_text_eng" type="String" label="Answer Text Eng" length="800" />
    <field name="control_type" type="Int32" default="((1))" label="Control Type" />
    <field name="answer_parent_id" type="Int32" default="((0))" label="Answer Parent#" />
    <field name="text_unit" type="String" allowNulls="false" default="(N'')" label="Text Unit" length="10" />
  </fields>
  <views>
    <view id="grid1" type="Grid" commandId="command1" label="Answers">
      <headerText>$DefaultGridViewDescription</headerText>
      <dataFields>
        <dataField fieldName="group_id" aliasFieldName="group_group_name" />
        <dataField fieldName="answer_text" />
        <dataField fieldName="answer_image" />
        <dataField fieldName="correct_answer" columns="15" />
        <dataField fieldName="priority" columns="15" />
        <dataField fieldName="correct_answer_text" />
        <dataField fieldName="answer_pos" columns="15" />
        <dataField fieldName="parent_id" columns="15" />
        <dataField fieldName="answer_text_eng" />
        <dataField fieldName="control_type" columns="15" />
        <dataField fieldName="answer_parent_id" columns="15" />
        <dataField fieldName="text_unit" columns="10" />
        <dataField fieldName="group_question_question_text" />
        <dataField fieldName="group_question_quiz_quiz_name" />
      </dataFields>
    </view>
    <view id="editForm1" type="Form" commandId="command1" label="Review Answers">
      <headerText>$DefaultEditViewDescription</headerText>
      <categories>
        <category id="c1" headerText="Answers" flow="NewColumn"  newColumn="true">
          <description><![CDATA[$DefaultEditDescription]]></description>
          <dataFields>
            <dataField fieldName="group_id" aliasFieldName="group_group_name" hyperlinkFormatString="~/Pages/question_groups.aspx?id={group_id}&amp;_controller=question_groups&amp;_commandName=Select&amp;_commandArgument=editForm1" />
            <dataField fieldName="answer_text" />
            <dataField fieldName="answer_image" />
            <dataField fieldName="correct_answer" columns="15" />
            <dataField fieldName="priority" columns="15" />
            <dataField fieldName="correct_answer_text" />
            <dataField fieldName="answer_pos" columns="15" />
            <dataField fieldName="parent_id" columns="15" />
            <dataField fieldName="answer_text_eng" />
            <dataField fieldName="control_type" columns="15" />
            <dataField fieldName="answer_parent_id" columns="15" />
            <dataField fieldName="text_unit" columns="10" />
          </dataFields>
        </category>
        <category id="c2" headerText="Reference Information">
          <description><![CDATA[$DefaultReferenceDescription]]></description>
          <dataFields>
            <dataField fieldName="group_question_question_text" />
            <dataField fieldName="group_question_quiz_quiz_name" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="createForm1" type="Form" commandId="command1" label="New Answers">
      <headerText>$DefaultCreateViewDescription</headerText>
      <categories>
        <category id="c1" headerText="New Answers" flow="NewColumn"  newColumn="true">
          <description><![CDATA[$DefaultNewDescription]]></description>
          <dataFields>
            <dataField fieldName="group_id" aliasFieldName="group_group_name" />
            <dataField fieldName="answer_text" />
            <dataField fieldName="answer_image" />
            <dataField fieldName="correct_answer" columns="15" />
            <dataField fieldName="priority" columns="15" />
            <dataField fieldName="correct_answer_text" />
            <dataField fieldName="answer_pos" columns="15" />
            <dataField fieldName="parent_id" columns="15" />
            <dataField fieldName="answer_text_eng" />
            <dataField fieldName="control_type" columns="15" />
            <dataField fieldName="answer_parent_id" columns="15" />
            <dataField fieldName="text_unit" columns="10" />
          </dataFields>
        </category>
      </categories>
    </view>
  </views>
