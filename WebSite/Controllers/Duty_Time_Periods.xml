  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Duty_Time_Periods"."SID" "SID"
	,"Duty_Time_Periods"."Period_Order" "Period_Order"
	,"Duty_Time_Periods"."Start_Time" "Start_Time"
	,"Duty_Time_Periods"."End_Time" "End_Time"
	,"Duty_Time_Periods"."Allow_In" "Allow_In"
	,"Duty_Time_Periods"."Allow_Out" "Allow_Out"
	,"Duty_Time_Periods"."Last_Modified" "Last_Modified"
	,"Duty_Time_Periods"."Duty_Time_SID" "Duty_Time_SID"
	,"Duty_Time_S"."Remark" "Duty_Time_SRemark"
	,"Duty_Time_SDuty_S"."Duty_Code" "Duty_Time_SDuty_SDuty_Code"
	,"Duty_Time_SDuty_SDuty_Type_S"."Duty_Code" "Duty_Time_SDuty_SDuty_Type_SDuty_Code"
from "dbo"."Duty_Time_Periods" "Duty_Time_Periods"
	left join "dbo"."Duty_Times" "Duty_Time_S" on "Duty_Time_Periods"."Duty_Time_SID" = "Duty_Time_S"."SID"
	left join "dbo"."Duties" "Duty_Time_SDuty_S" on "Duty_Time_S"."Duty_SID" = "Duty_Time_SDuty_S"."SID"
	left join "dbo"."Duty_Types" "Duty_Time_SDuty_SDuty_Type_S" on "Duty_Time_SDuty_S"."Duty_Type_SID" = "Duty_Time_SDuty_SDuty_Type_S"."SID"
]]></text>
    </command>
    <command id="SIDIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="SID" />
      </output>
    </command>
  </commands>
