<?xml version="1.0" encoding="utf-8"?>
<dataController name="Duties" conflictDetection="overwriteChanges" label="Duties" plugIn="eZee.Data.AnnotationPlugIn" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Duties"."SID" "SID"
	,"Duties"."Duty_Code" "Duty_Code"
	,"Duties"."Duty_Name" "Duty_Name"
	,"Duties"."Duty_Name_EN" "Duty_Name_EN"
	,"Duties"."Duty_Type_SID" "Duty_Type_SID"
	,"Duty_Type_S"."Duty_Code" "Duty_Type_SDuty_Code"
	,"Duties"."Last_Modified" "Last_Modified"
from "dbo"."Duties" "Duties"
	left join "dbo"."Duty_Types" "Duty_Type_S" on "Duties"."Duty_Type_SID" = "Duty_Type_S"."SID"
]]></text>
    </command>
    <command id="SIDIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="SID" />
      </output>
    </command>
  </commands>
  <fields>
    <field name="SID" type="Int32" allowNulls="false" isPrimaryKey="true" label="Sid" readOnly="true" />
    <field name="Duty_Code" type="String" label="Duty Code" length="50" showInSummary="true" />
    <field name="Duty_Name" type="String" label="Duty Name" length="200" showInSummary="true" />
    <field name="Duty_Name_EN" type="String" label="Duty Name EN" length="200" showInSummary="true" />
    <field name="Duty_Type_SID" type="Int32" label="Duty Type SID" showInSummary="true">
      <items style="Lookup" dataController="Duty_Types" newDataView="createForm1" searchOnStart="true" />
    </field>
    <field name="Duty_Type_SDuty_Code" type="String" readOnly="true" label="Duty Type S Duty Code" length="50" />
    <field name="Last_Modified" type="DateTime" label="Last Modified" showInSummary="true" />
  </fields>
  <views>
    <view id="grid1" type="Grid" commandId="command1" label="Duties">
      <headerText>$DefaultGridViewDescription</headerText>
      <dataFields>
        <dataField fieldName="Duty_Code" columns="50" />
        <dataField fieldName="Duty_Name" />
        <dataField fieldName="Duty_Name_EN" />
        <dataField fieldName="Duty_Type_SID" aliasFieldName="Duty_Type_SDuty_Code" hyperlinkFormatString="~/Pages/Duty_Types.aspx?SID={Duty_Type_SID}&amp;_controller=Duty_Types&amp;_commandName=Select&amp;_commandArgument=editForm1" />
        <dataField fieldName="Last_Modified" columns="10" />
      </dataFields>
    </view>
    <view id="editForm1" type="Form" commandId="command1" label="Review Duties">
      <headerText>$DefaultEditViewDescription</headerText>
      <categories>
        <category id="c1" headerText="Duties" flow="NewColumn"  newColumn="true">
          <description><![CDATA[$DefaultEditDescription]]></description>
          <dataFields>
            <dataField fieldName="Duty_Code" columns="50" />
            <dataField fieldName="Duty_Name" />
            <dataField fieldName="Duty_Name_EN" />
            <dataField fieldName="Duty_Type_SID" aliasFieldName="Duty_Type_SDuty_Code" hyperlinkFormatString="~/Pages/Duty_Types.aspx?SID={Duty_Type_SID}&amp;_controller=Duty_Types&amp;_commandName=Select&amp;_commandArgument=editForm1" />
            <dataField fieldName="Last_Modified" columns="10" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="createForm1" type="Form" commandId="command1" label="New Duties">
      <headerText>$DefaultCreateViewDescription</headerText>
      <categories>
        <category id="c1" headerText="New Duties" flow="NewColumn"  newColumn="true">
          <description><![CDATA[$DefaultNewDescription]]></description>
          <dataFields>
            <dataField fieldName="Duty_Code" columns="50" />
            <dataField fieldName="Duty_Name" />
            <dataField fieldName="Duty_Name_EN" />
            <dataField fieldName="Duty_Type_SID" aliasFieldName="Duty_Type_SDuty_Code" />
            <dataField fieldName="Last_Modified" columns="10" />
          </dataFields>
        </category>
      </categories>
    </view>
  </views>
  <actions>
    <actionGroup id="ag1" scope="Grid">
