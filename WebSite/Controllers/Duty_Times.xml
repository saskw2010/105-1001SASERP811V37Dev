<?xml version="1.0" encoding="utf-8"?>
<dataController name="Duty_Times" conflictDetection="overwriteChanges" label="Duty Times" plugIn="eZee.Data.AnnotationPlugIn" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"Duty_Times"."SID" "SID"
	,"Duty_Times"."Duty_SID" "Duty_SID"
	,"Duty_S"."Duty_Code" "Duty_SDuty_Code"
	,"Duty_SDuty_Type_S"."Duty_Code" "Duty_SDuty_Type_SDuty_Code"
	,"Duty_Times"."Start_Date" "Start_Date"
	,"Duty_Times"."End_Date" "End_Date"
	,"Duty_Times"."Last_Modified" "Last_Modified"
	,"Duty_Times"."Remark" "Remark"
	,"Duty_Times"."HalfDay" "HalfDay"
	,"Duty_Times"."HalfDay_StartTime" "HalfDay_StartTime"
	,"Duty_Times"."HalfDay_EndTime" "HalfDay_EndTime"
	,"Duty_Times"."RestDay" "RestDay"
	,"Duty_Times"."WeekEnd" "WeekEnd"
	,"Duty_Times"."IsBasic" "IsBasic"
from "dbo"."Duty_Times" "Duty_Times"
	left join "dbo"."Duties" "Duty_S" on "Duty_Times"."Duty_SID" = "Duty_S"."SID"
	left join "dbo"."Duty_Types" "Duty_SDuty_Type_S" on "Duty_S"."Duty_Type_SID" = "Duty_SDuty_Type_S"."SID"
]]></text>
    </command>
    <command id="SIDIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="SID" />
      </output>
    </command>
  </commands>
  <fields>
    <field name="SID" type="Int32" allowNulls="false" isPrimaryKey="true" label="Sid" readOnly="true" />
    <field name="Duty_SID" type="Int32" label="Duty SID" showInSummary="true">
      <items style="Lookup" dataController="Duties" newDataView="createForm1" searchOnStart="true" />
    </field>
    <field name="Duty_SDuty_Code" type="String" readOnly="true" label="Duty S Duty Code" length="50" />
    <field name="Duty_SDuty_Type_SDuty_Code" type="String" readOnly="true" label="Duty S Duty Type S Duty Code" length="50" />
    <field name="Start_Date" type="DateTime" label="Start Date" showInSummary="true" />
    <field name="End_Date" type="DateTime" label="End Date" showInSummary="true" />
    <field name="Last_Modified" type="DateTime" label="Last Modified" showInSummary="true" />
    <field name="Remark" type="String" label="Remark" length="50" showInSummary="true" />
    <field name="HalfDay" type="Int32" label="Half Day" />
    <field name="HalfDay_StartTime" type="DateTime" label="Half Day Start Time" />
    <field name="HalfDay_EndTime" type="DateTime" label="Half Day End Time" />
    <field name="RestDay" type="Int32" label="Rest Day" />
    <field name="WeekEnd" type="Int32" label="Week End" />
    <field name="IsBasic" type="Boolean" label="Is Basic" />
  </fields>
