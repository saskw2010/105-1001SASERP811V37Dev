	,"AlertEmails"."Emailnotes" "Emailnotes"
from "dbo"."AlertEmails" "AlertEmails"
	left join "dbo"."AlertLevel" "Alert" on "AlertEmails"."AlertID" = "Alert"."AlertID"
	left join "dbo"."OpCo" "AlertOpco" on "Alert"."OpcoID" = "AlertOpco"."OpcoIDidentity"
	left join "dbo"."Stcurncy" "AlertCurncy_" on "Alert"."Curncy_No" = "AlertCurncy_"."Curncy_No"
]]></text>
    </command>
