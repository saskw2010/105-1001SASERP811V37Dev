<?xml version="1.0" encoding="utf-8"?>
<dataController name="tbl_Galleries" conflictDetection="overwriteChanges" label="tbl Galleries" plugIn="eZee.Data.AnnotationPlugIn" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"tbl_Galleries"."id" "id"
	,"tbl_Galleries"."VideoOrPicture" "VideoOrPicture"
	,"tbl_Galleries"."VideoIsYoutube" "VideoIsYoutube"
	,"tbl_Galleries"."PictureForVideo" "PictureForVideo"
	,"tbl_Galleries"."FileName" "FileName"
	,"tbl_Galleries"."CategoryId" "CategoryId"
	,"Category"."NameAr" "CategoryNameAr"
	,"tbl_Galleries"."NameEn" "NameEn"
	,"tbl_Galleries"."NameAr" "NameAr"
from "dbo"."tbl_Galleries" "tbl_Galleries"
	left join "dbo"."tbl_Categories" "Category" on "tbl_Galleries"."CategoryId" = "Category"."id"
]]></text>
    </command>
    <command id="idIdentityCommand" type="Text" event="Inserted">
      <text><![CDATA[select @@identity]]></text>
      <output>
        <fieldOutput fieldName="id" />
      </output>
    </command>
  </commands>
  <fields>
    <field name="id" type="Int32" allowNulls="false" isPrimaryKey="true" label="Id" readOnly="true" />
    <field name="VideoOrPicture" type="String" label="Video Or Picture" length="50" showInSummary="true" />
    <field name="VideoIsYoutube" type="Boolean" label="Video Is Youtube" showInSummary="true" />
    <field name="PictureForVideo" type="String" allowQBE="false" allowSorting="false" label="Picture For Video" length="-1" showInSummary="true" />
    <field name="FileName" type="String" allowQBE="false" allowSorting="false" label="File Name" length="-1" showInSummary="true" />
    <field name="CategoryId" type="Int32" label="Category#" showInSummary="true">
      <items style="Lookup" dataController="tbl_Categories" newDataView="createForm1" searchOnStart="true" />
    </field>
    <field name="CategoryNameAr" type="String" readOnly="true" allowQBE="false" allowSorting="false" label="Category Name Ar" length="-1" />
    <field name="NameEn" type="String" allowQBE="false" allowSorting="false" label="Name En" length="-1" />
    <field name="NameAr" type="String" allowQBE="false" allowSorting="false" label="Name Ar" length="-1" />
  </fields>
  <views>
    <view id="grid1" type="Grid" commandId="command1" label="tbl Galleries">
      <headerText>$DefaultGridViewDescription</headerText>
      <dataFields>
