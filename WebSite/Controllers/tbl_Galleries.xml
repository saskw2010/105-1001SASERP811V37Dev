        <category id="c1" headerText="New tbl Galleries" flow="NewColumn"  newColumn="true">
          <description><![CDATA[$DefaultNewDescription]]></description>
          <dataFields>
            <dataField fieldName="VideoOrPicture" columns="50" />
            <dataField fieldName="VideoIsYoutube" />
            <dataField fieldName="PictureForVideo" rows="5" />
            <dataField fieldName="FileName" rows="5" />
            <dataField fieldName="CategoryId" aliasFieldName="CategoryNameAr" />
            <dataField fieldName="NameEn" rows="5" />
            <dataField fieldName="NameAr" rows="5" />
          </dataFields>
        </category>
      </categories>
    </view>
  </views>
