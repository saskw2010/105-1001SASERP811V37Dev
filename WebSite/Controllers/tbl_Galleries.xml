        <dataField fieldName="VideoIsYoutube" />
        <dataField fieldName="PictureForVideo" rows="5" />
        <dataField fieldName="FileName" rows="5" />
        <dataField fieldName="CategoryId" aliasFieldName="CategoryNameAr" hyperlinkFormatString="~/Pages/tbl_Categories.aspx?id={CategoryId}&amp;_controller=tbl_Categories&amp;_commandName=Select&amp;_commandArgument=editForm1" />
        <dataField fieldName="NameEn" rows="5" />
        <dataField fieldName="NameAr" rows="5" />
      </dataFields>
    </view>
    <view id="editForm1" type="Form" commandId="command1" label="Review tbl Galleries">
      <headerText>$DefaultEditViewDescription</headerText>
      <categories>
        <category id="c1" headerText="tbl Galleries" flow="NewColumn"  newColumn="true">
          <description><![CDATA[$DefaultEditDescription]]></description>
