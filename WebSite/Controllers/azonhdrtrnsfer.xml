    <command id="command1" type="Text">
      <text><![CDATA[
select
	"azonhdrtrnsfer"."countrdus" "countrdus"
	,"azonhdrtrnsfer"."Brn_No" "Brn_No"
	,"Brn_"."Brn_Nm" "Brn_Brn_Nm"
    ,"Brn_"."branch" "branch"
	,"Brn_Cmp_"."Grp_Nm" "Brn_Cmp_Grp_Nm"
	,"Brn_Cmp_Grp_"."Grp_Nm" "Brn_Cmp_Grp_Grp_Nm"
	,"azonhdrtrnsfer"."TRFBrn_NO" "TRFBrn_NO"
	,"TRFBrn_"."Brn_Nm" "TRFBrn_Brn_Nm"
	,"TRFBrn_Cmp_"."Grp_Nm" "TRFBrn_Cmp_Grp_Nm"
	,"TRFBrn_Cmp_Grp_"."Grp_Nm" "TRFBrn_Cmp_Grp_Grp_Nm"
	,"azonhdrtrnsfer"."subject" "subject"
	,"azonhdrtrnsfer"."azndate" "azndate"
    ,"azonhdrtrnsfer"."recivedflag" "recivedflag"
	,"azonhdrtrnsfer"."ModifiedBy" "ModifiedBy"
	,"azonhdrtrnsfer"."ModifiedOn" "ModifiedOn"
	,"azonhdrtrnsfer"."CreatedBy" "CreatedBy"
	,"azonhdrtrnsfer"."CreatedOn" "CreatedOn"
      from "dbo"."azonhdrtrnsfer" "azonhdrtrnsfer"
	left join "dbo"."Branchcnst" "Brn_" on "azonhdrtrnsfer"."Brn_No" = "Brn_"."Brn_No"
	left join "dbo"."Pycnstnt" "Brn_Cmp_" on "Brn_"."Cmp_code" = "Brn_Cmp_"."Cmp_No"
	left join "dbo"."Groupcnst" "Brn_Cmp_Grp_" on "Brn_Cmp_"."Grp_No" = "Brn_Cmp_Grp_"."Grp_No"
	left join "dbo"."Branchcnst" "TRFBrn_" on "azonhdrtrnsfer"."TRFBrn_NO" = "TRFBrn_"."Brn_No"
	left join "dbo"."Pycnstnt" "TRFBrn_Cmp_" on "TRFBrn_"."Cmp_code" = "TRFBrn_Cmp_"."Cmp_No"
	left join "dbo"."Groupcnst" "TRFBrn_Cmp_Grp_" on "TRFBrn_Cmp_"."Grp_No" = "TRFBrn_Cmp_Grp_"."Grp_No"
]]></text>
    </command>
