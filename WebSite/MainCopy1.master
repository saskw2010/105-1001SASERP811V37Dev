                        // Pattern 3: Extract from any text before pipe or logout
                        const beforePipeMatch = welcomeText.match(/^([^|]+)/);
                        if (beforePipeMatch && beforePipeMatch[1].trim() && !beforePipeMatch[1].includes('Welcome')) {
