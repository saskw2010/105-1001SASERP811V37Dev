    <script>
        // Modern App Initialization
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize smooth scrolling
            document.documentElement.style.scrollBehavior = 'smooth';
            
            // Auto-initialize menu system for all screens
            if (window.initModernMenuOnce) {
                setTimeout(() => window.initModernMenuOnce(), 100);
            }
            
            // Universal menu functionality (works for all screen sizes)
            const toggleBtn = document.getElementById('menuToggleBtn');
            const menuHost = document.getElementById('ModernMenuHost');
            
            console.log("üîß Menu initialization:", {
                toggleBtn: !!toggleBtn,
                menuHost: !!menuHost,
                screenWidth: window.innerWidth,
                userAgent: navigator.userAgent.substring(0, 50)
            });
            
            if (toggleBtn && menuHost) {
                console.log("‚úÖ Setting up menu toggle functionality");
                // Focus management for accessibility
                let lastFocusedEl = null;
                const panel = menuHost.querySelector('.pm-panel');
                const getFocusable = () => panel ? panel.querySelectorAll('a, button, input, select, textarea, [tabindex]:not([tabindex="-1"])') : [];

                toggleBtn.addEventListener('click', function() {
                    console.log("üéØ Burger button clicked!");
                    
                    if (!window.modernMenuInitialized && window.initModernMenuOnce) {
                        console.log("üìä Initializing menu for first time");
                        window.initModernMenuOnce();
                    }
                    
                    // Toggle menu visibility
                    const isActive = menuHost.classList.contains('active');
                    
                    console.log("üìä Menu state before toggle:", {
                        isActive: isActive,
                        menuClasses: Array.from(menuHost.classList),
                        menuDisplay: window.getComputedStyle(menuHost).display
                    });
                    
                    if (isActive) {
                        menuHost.classList.remove('active');
                        document.body.classList.remove('menu-open');
                        toggleBtn.setAttribute('aria-expanded', 'false');
                        if (lastFocusedEl) { try { lastFocusedEl.focus(); } catch(e) {} lastFocusedEl = null; }
                        console.log("‚úÖ Menu closed");
                    } else {
                        menuHost.classList.add('active');
                        document.body.classList.add('menu-open');
                        toggleBtn.setAttribute('aria-expanded', 'true');
                        lastFocusedEl = document.activeElement;
                        const focusables = getFocusable();
                        if (focusables && focusables.length) { try { focusables[0].focus(); } catch(e) {} }
                        console.log("‚úÖ Menu opened");
                    }
                    
                    console.log("üìä Menu state after toggle:", {
                        isActive: menuHost.classList.contains('active'),
                        menuClasses: Array.from(menuHost.classList)
                    });
                });

                // Close menu on backdrop click
                const backdrop = menuHost.querySelector('.pm-backdrop');
                if (backdrop) {
                    backdrop.addEventListener('click', function() {
                        menuHost.classList.remove('active');
                        document.body.classList.remove('menu-open');
                        toggleBtn.setAttribute('aria-expanded', 'false');
                        // restore focus
                        if (lastFocusedEl) { try { lastFocusedEl.focus(); } catch(e) {} lastFocusedEl = null; }
                    });
                }
                
                // Close menu on close button click
                const closeBtn = menuHost.querySelector('.pm-close');
                if (closeBtn) {
                    closeBtn.addEventListener('click', function() {
                        menuHost.classList.remove('active');
                        document.body.classList.remove('menu-open');
                        toggleBtn.setAttribute('aria-expanded', 'false');
                        if (lastFocusedEl) { try { lastFocusedEl.focus(); } catch(e) {} lastFocusedEl = null; }
                    });
                }
                
                // Close menu on ESC key
                document.addEventListener('keydown', function(e) {
                    if (e.key === 'Escape' && menuHost.classList.contains('active')) {
                        menuHost.classList.remove('active');
                        document.body.classList.remove('menu-open');
                        toggleBtn.setAttribute('aria-expanded', 'false');
                        if (lastFocusedEl) { try { lastFocusedEl.focus(); } catch(e) {} lastFocusedEl = null; }
                    }
                });

                // Render extracted 4-level menu into modal panel list when opened
                const pmList = document.getElementById('pm-list');
                const pmTools = document.getElementById('pm-tools-slot');
                const STORAGE_KEY = 'pmExpandedNodes';
                function loadExpandedSet() {
                    try { const raw = localStorage.getItem(STORAGE_KEY); return raw ? new Set(JSON.parse(raw)) : new Set(); } catch { return new Set(); }
                }
                function saveExpandedSet(set) {
                    try { localStorage.setItem(STORAGE_KEY, JSON.stringify(Array.from(set))); } catch {}
                }
                function renderEnhancedMenuToPanel() {
                    try {
                        if (!pmList) return;
                        // Extract menu directly from legacy DOM (#PageMenuBar) to preserve permissions
                        function extractFromLegacyDom() {
                            const host = document.getElementById('PageMenuBar');
                            if (!host) return [];
                            // Look for first UL in legacy menu
                            const rootUl = host.querySelector('ul, .Menu, .Root, nav ul');
                            if (!rootUl) return [];
                            const walk = (ul) => {
                                const arr = [];
                                ul.querySelectorAll(':scope > li').forEach(li => {
                                    const a = li.querySelector(':scope > a, :scope > span a, :scope > .link');
                                    const title = a ? (a.textContent || '').trim() : (li.getAttribute('title') || '').trim();
                                    const href = a && a.getAttribute('href') ? a.getAttribute('href') : '#';
                                    const childUl = li.querySelector(':scope > ul');
                                    arr.push({ text: title, url: href, children: childUl ? walk(childUl) : [] });
                                });
                                return arr;
                            };
                            return walk(rootUl);
                        }

                        const items = extractFromLegacyDom();
                        if (!Array.isArray(items) || !items.length) return; // nothing to render yet

                        // Clear existing
                        pmList.innerHTML = '';
                        if (pmTools) {
                            pmTools.innerHTML = '';
                            // Add Expand/Collapse all controls once
                            const toolsBar = document.createElement('div');
                            toolsBar.style.display = 'flex';
                            toolsBar.style.gap = '0.5rem';
                            toolsBar.style.padding = '0.5rem 0.75rem';
                            const btnExpandAll = document.createElement('button');
                            btnExpandAll.type = 'button';
                            btnExpandAll.className = 'membership-btn';
                            btnExpandAll.textContent = 'Expand All';
                            btnExpandAll.addEventListener('click', () => setAllExpanded(true));
                            const btnCollapseAll = document.createElement('button');
                            btnCollapseAll.type = 'button';
                            btnCollapseAll.className = 'membership-btn';
                            btnCollapseAll.textContent = 'Collapse All';
                            btnCollapseAll.addEventListener('click', () => setAllExpanded(false));
                            toolsBar.appendChild(btnExpandAll);
                            toolsBar.appendChild(btnCollapseAll);
                            pmTools.appendChild(toolsBar);
                        }

                        const expandedSet = loadExpandedSet();

                        // Helper to build a stable key for a node
                        const nodeKey = (node, parentKey) => {
                            const base = (node.url || node.href || node.text || node.title || 'node').toString();
                            return parentKey ? parentKey + '>' + base : base;
                        };

                        // Helper to create tree recursively (max 4 levels typical)
                        const createNode = (node, parentKey) => {
                            const key = nodeKey(node, parentKey);
                            const li = document.createElement('li');
                            li.setAttribute('role', 'treeitem');
                            li.dataset.key = key;
                            const hasChildren = Array.isArray(node.children) && node.children.length > 0;

                            // Row wrapper: toggle + link
                            const row = document.createElement('div');
                            row.className = 'pm-row';

                            if (hasChildren) {
                                const toggle = document.createElement('button');
                                toggle.type = 'button';
                                toggle.className = 'pm-toggle';
                                toggle.setAttribute('aria-label', 'Toggle');
                                toggle.innerHTML = '<span class="caret">‚ñ∏</span>';
                                toggle.addEventListener('click', (e) => {
                                    e.preventDefault();
                                    e.stopPropagation();
                                    const expanded = li.getAttribute('aria-expanded') === 'true';
                                    const next = expanded ? 'false' : 'true';
                                    li.setAttribute('aria-expanded', next);
                                    // persist change
                                    if (next === 'true') { expandedSet.add(key); } else { expandedSet.delete(key); }
                                    saveExpandedSet(expandedSet);
                                });
                                toggle.addEventListener('keydown', (e) => {
                                    if (e.key === 'Enter' || e.key === ' ') {
                                        e.preventDefault();
                                        toggle.click();
                                    }
                                });
                                row.appendChild(toggle);
                                // Default collapsed unless persisted expanded
                                li.setAttribute('aria-expanded', expandedSet.has(key) ? 'true' : 'false');
                            } else {
                                // Create placeholder to align links
                                const spacer = document.createElement('span');
                                spacer.style.width = '24px';
                                spacer.style.display = 'inline-block';
                                spacer.setAttribute('aria-hidden', 'true');
                                row.appendChild(spacer);
                            }

                            const a = document.createElement('a');
                            a.textContent = node.text || node.title || 'Link';
                            a.href = node.url || node.href || '#';
                            a.className = 'pm-link';
                            row.appendChild(a);

                            li.appendChild(row);

                            if (hasChildren) {
                                const ul = document.createElement('ul');
                                ul.setAttribute('role', 'group');
                                node.children.forEach(child => ul.appendChild(createNode(child, key)));
                                li.appendChild(ul);
                            }
                            return li;
                        };

                        // Top-level render
                        items.forEach(n => pmList.appendChild(createNode(n, '')));

                        // Highlight current page and auto-expand ancestors
                        function highlightActive() {
                            try {
                                const current = window.location.pathname.toLowerCase();
                                const links = pmList.querySelectorAll('a.pm-link[href]');
                                let best = null; let bestLen = -1;
                                links.forEach(a => {
                                    const href = a.getAttribute('href');
                                    if (!href || href === '#') return;
                                    const urlPath = href.split('#')[0].split('?')[0].toLowerCase();
                                    // choose the longest path that matches end or contains
                                    if (current.endsWith(urlPath) || current.indexOf(urlPath) >= 0) {
                                        if (urlPath.length > bestLen) { best = a; bestLen = urlPath.length; }
                                    }
                                });
                                if (best) {
                                    best.classList.add('active');
                                    // expand parents
                                    let p = best.closest('li[role="treeitem"]');
                                    while (p) {
                                        const key = p.dataset.key;
                                        if (p.querySelector('ul')) {
                                            p.setAttribute('aria-expanded', 'true');
                                            if (key) expandedSet.add(key);
                                        }
                                        p = p.parentElement && p.parentElement.closest ? p.parentElement.closest('li[role="treeitem"]') : null;
                                    }
                                    saveExpandedSet(expandedSet);
                                }
                            } catch {}
                        }
                        highlightActive();

                        // Helpers for expand/collapse all
                        function setAllExpanded(expanded) {
                            pmList.querySelectorAll('li[role="treeitem"]').forEach(li => {
                                if (li.querySelector('ul')) {
                                    li.setAttribute('aria-expanded', expanded ? 'true' : 'false');
                                    const key = li.dataset.key; if (key) { if (expanded) expandedSet.add(key); else expandedSet.delete(key); }
                                }
                            });
                            saveExpandedSet(expandedSet);
                        }
                    } catch (err) {
                        console.warn('Menu render to panel failed:', err);
                    }
                }

                // Re-render menu when the modal panel opens
                toggleBtn.addEventListener('click', function() {
                    if (menuHost.classList.contains('active')) {
                        renderEnhancedMenuToPanel();
                    }
                });

                // Basic keyboard navigation for tree
                menuHost.addEventListener('keydown', function(e) {
                    const focused = document.activeElement;
                    const li = focused ? focused.closest && focused.closest('li[role="treeitem"]') : null;
                    if (!li) return;
                    if (e.key === 'ArrowRight') {
                        if (li.getAttribute('aria-expanded') === 'false') {
                            li.setAttribute('aria-expanded', 'true');
                            const key = li.dataset.key; if (key) { const set = loadExpandedSet(); set.add(key); saveExpandedSet(set); }
                            e.preventDefault();
                        } else {
                            // focus first child link
                            const firstChild = li.querySelector('ul li .pm-link');
                            if (firstChild) { firstChild.focus(); e.preventDefault(); }
                        }
                    } else if (e.key === 'ArrowLeft') {
                        if (li.getAttribute('aria-expanded') === 'true') {
                            li.setAttribute('aria-expanded', 'false');
                            const key = li.dataset.key; if (key) { const set = loadExpandedSet(); set.delete(key); saveExpandedSet(set); }
                            e.preventDefault();
                        } else {
                            // focus parent link
                            const parentLi = li.parentElement && li.parentElement.closest ? li.parentElement.closest('li[role="treeitem"]') : null;
                            if (parentLi) {
                                const link = parentLi.querySelector('.pm-link');
                                if (link) { link.focus(); e.preventDefault(); }
                            }
                        }
                    }
                });
            }
            
            // Add loading states and animations
            const content = document.querySelector('.main-content');
            if (content) {
                content.style.opacity = '0';
                content.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    content.style.transition = 'all 0.6s ease-out';
                    content.style.opacity = '1';
                    content.style.transform = 'translateY(0)';
                }, 100);
            }
            
            // Header scroll effect
            let lastScrollY = window.scrollY;
            const header = document.querySelector('.ultra-header');
            
            window.addEventListener('scroll', () => {
                const currentScrollY = window.scrollY;
                
                if (currentScrollY > lastScrollY && currentScrollY > 100) {
                    header.style.transform = 'translateY(-100%)';
                } else {
                    header.style.transform = 'translateY(0)';
                }
                
                lastScrollY = currentScrollY;
            });
            
            // Notification click handler
            const notificationBtn = document.querySelector('.notification-btn');
            if (notificationBtn) {
                notificationBtn.addEventListener('click', function() {
                    // Add notification functionality here
                    console.log('Notifications clicked');
                });
            }
            
            // User button click handler
            const userBtn = document.querySelector('.user-btn');
            if (userBtn) {
                userBtn.addEventListener('click', function() {
                    // Add user menu functionality here
                    console.log('User menu clicked');
                });
            }
            
            console.log('üöÄ SKYsaas Ultra Modern UI Initialized');
        });
        
        // Membership Bar Functions - Connected to Legacy System
        function changeLanguage(lang) {
            console.log('ÿ™ÿ∫ŸäŸäÿ± ÿßŸÑŸÑÿ∫ÿ© ÿ•ŸÑŸâ:', lang);
            try {
                // Use legacy membership changeCulture function
                if (typeof Web !== 'undefined' && Web.Membership && Web.Membership._instance) {
                    const membership = Web.Membership._instance;
                    if (membership.changeCulture) {
                        membership.changeCulture(lang);
                        return;
                    }
                }
                
                // Fallback to cookie-based approach
                const date = new Date();
                date.setDate(date.getDate() + 14);
                document.cookie = `.COTCULTURE=${lang}; expires=${date.toUTCString()}; path=/`;
                location.replace(location.href.split('#')[0]);
            } catch (e) {
                console.error('Language change failed:', e);
                // Simple fallback
                if (lang === 'ar') {
                    document.documentElement.setAttribute('dir', 'rtl');
                } else {
                    document.documentElement.setAttribute('dir', 'ltr');
                }
            }
        }

        // Language dropdown interactions
        function toggleLanguageDropdown() {
            const dd = document.getElementById('languageDropdown');
            if (!dd) return;
            dd.classList.toggle('show');
            // close when clicking outside
            const handler = (e) => {
                if (!dd.contains(e.target)) {
                    dd.classList.remove('show');
                    document.removeEventListener('click', handler);
                }
            };
            setTimeout(() => document.addEventListener('click', handler), 0);
        }

        function selectLanguage(code, shortLabel, el) {
            try {
                // Update UI selection
                const dd = document.getElementById('languageDropdown');
                const current = document.getElementById('currentLangCode');
                if (current) current.textContent = shortLabel;
