                    const welcomeText = legacyMembershipBar.innerText || legacyMembershipBar.textContent;
                    let username = 'ÿßŸÑŸÖÿ≥ÿ™ÿÆÿØŸÖ';
                    
                    // Try different patterns to extract username
                    if (welcomeText) {
                        // Pattern 1: "Welcome, username"
                        const welcomeMatch = welcomeText.match(/Welcome[,\s]+([^|]+)/i);
                        if (welcomeMatch) {
                            username = welcomeMatch[1].trim();
                        }
                        // Pattern 2: Arabic welcome patterns
                        const arabicMatch = welcomeText.match(/ŸÖÿ±ÿ≠ÿ®ÿß[Ÿãÿå\s]+([^|]+)/);
