        // Get current user name from membership bar
        function updateUserName() {
            try {
                // Try to get username from legacy membership bar
                const legacyMembershipBar = document.getElementById('Membership_Login');
                const userNameElement = document.getElementById('currentUserName');
                
                if (legacyMembershipBar && userNameElement) {
                    // Extract username from legacy membership bar
                    const welcomeText = legacyMembershipBar.innerText || legacyMembershipBar.textContent;
                    let username = 'المستخدم';
                    
                    // Try different patterns to extract username
                    if (welcomeText) {
                        // Pattern 1: "Welcome, username"
                        const welcomeMatch = welcomeText.match(/Welcome[,\s]+([^|]+)/i);
                        if (welcomeMatch) {
                            username = welcomeMatch[1].trim();
                        }
                        // Pattern 2: Arabic welcome patterns
                        const arabicMatch = welcomeText.match(/مرحبا[ً،\s]+([^|]+)/);
                        if (arabicMatch) {
                            username = arabicMatch[1].trim();
                        }
                        // Pattern 3: Extract from any text before pipe or logout
                        const beforePipeMatch = welcomeText.match(/^([^|]+)/);
                        if (beforePipeMatch && beforePipeMatch[1].trim() && !beforePipeMatch[1].includes('Welcome')) {
                            username = beforePipeMatch[1].trim();
                        }
                    }
                    
                    userNameElement.textContent = username;
                }
                
                // Also try to get from server-side if available
                if (typeof __username !== 'undefined' && __username) {
                    document.getElementById('currentUserName').textContent = __username;
                } else if (typeof Web !== 'undefined' && Web.Membership && Web.Membership._instance) {
                    const membershipInstance = Web.Membership._instance;
                    if (membershipInstance.get_user && membershipInstance.get_user()) {
                        document.getElementById('currentUserName').textContent = membershipInstance.get_user();
                    }
                }
            } catch (e) {
                console.log('Unable to update username:', e);
            }
        }
        
        // Real-time data bridge - Connect legacy system to modern UI
        function initLegacyDataBridge() {
            try {
                // Wait for legacy membership to initialize
                if (typeof Web !== 'undefined' && Web.Membership && Web.Membership._instance) {
                    const membership = Web.Membership._instance;
                    
                    // Get real username
                    if (membership.get_user) {
                        const realUsername = membership.get_user();
                        if (realUsername) {
                            document.getElementById('currentUserName').textContent = realUsername;
                        }
                    }
                    
                    // Check if user is authenticated
                    if (membership.get_isAuthenticated && membership.get_isAuthenticated()) {
                        console.log('User is authenticated via legacy system');
                        document.body.classList.add('user-authenticated');
                    }
                    
                    // Get available cultures/languages
                    if (membership.get_cultures && membership.get_cultures()) {
                        updateLanguageSelector(membership.get_cultures());
                    }
                    
                    console.log('Legacy data bridge initialized successfully');
                } else {
                    // Retry after a short delay
                    setTimeout(initLegacyDataBridge, 500);
                }
            } catch (e) {
                console.log('Legacy data bridge initialization failed:', e);
            }
        }
        
        // Update language selector with real data
        function updateLanguageSelector(cultures) {
            try {
                const languageSelector = document.querySelector('.language-selector');
                if (languageSelector && cultures) {
                    languageSelector.innerHTML = '';
                    
                    const cultureArray = cultures.split(';');
                    cultureArray.forEach(culture => {
                        if (culture.trim()) {
                            const parts = culture.split('|');
                            if (parts.length >= 2) {
                                const option = document.createElement('option');
                                option.value = parts[0];
                                option.textContent = parts[1];
                                if (parts[2] === 'True') {
                                    option.selected = true;
                                }
                                languageSelector.appendChild(option);
                            }
                        }
                    });
                }
            } catch (e) {
                console.log('Unable to update language selector:', e);
            }
        }
        
        // Initialize user info when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize legacy data bridge
            initLegacyDataBridge();
            
            // Update username with real data
            updateUserName();
            
            // Try to update after legacy system loads
            setTimeout(() => {
                updateUserName();
                initLegacyDataBridge();
            }, 1000);
            
            // Check periodically for updates
            setInterval(() => {
                updateUserName();
            }, 5000);
        });
        
        // Performance optimization
        window.addEventListener('load', function() {
            // Remove any loading states
            document.body.classList.add('loaded');
        });
    </script>
