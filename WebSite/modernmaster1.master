                    <button type="button" class="membership-btn" onclick="showHistory()" title="السجل">
                        <i class="fas fa-history"></i>
                        <span class="d-none d-sm-inline">السجل</span>
                    </button>
                    <button type="button" class="membership-btn" onclick="showHelp()" title="المساعدة">
                        <i class="fas fa-question-circle"></i>
                        <span class="d-none d-sm-inline">مساعدة</span>
                    </button>
                    <button type="button" class="membership-btn" onclick="showUserProfile()">
                        <i class="fas fa-user-cog"></i>
                        <span class="d-none d-sm-inline">حسابي</span>
                    </button>
                    <button type="button" class="membership-btn" onclick="showSettings()">
                        <i class="fas fa-cog"></i>
                        <span class="d-none d-sm-inline">الإعدادات</span>
                    </button>
                    <button type="button" class="membership-btn" onclick="logout()">
