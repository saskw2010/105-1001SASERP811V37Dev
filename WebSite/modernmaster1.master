    <!-- Ultra Modern JavaScript -->
    <script src="/js/modern-menu-once.js"></script>
    <script>
        // Modern App Initialization
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize smooth scrolling
            document.documentElement.style.scrollBehavior = 'smooth';
            
            // Auto-initialize menu system for all screens
            if (window.initModernMenuOnce) {
                setTimeout(() => window.initModernMenuOnce(), 100);
            }
            
            // Universal menu functionality (works for all screen sizes)
            const toggleBtn = document.getElementById('menuToggleBtn');
            const menuHost = document.getElementById('ModernMenuHost');
            
            console.log("🔧 Menu initialization:", {
                toggleBtn: !!toggleBtn,
                menuHost: !!menuHost,
                screenWidth: window.innerWidth,
                userAgent: navigator.userAgent.substring(0, 50)
            });
            
            if (toggleBtn && menuHost) {
                console.log("✅ Setting up menu toggle functionality");
                
                toggleBtn.addEventListener('click', function() {
                    console.log("🎯 Burger button clicked!");
                    
                    if (!window.modernMenuInitialized && window.initModernMenuOnce) {
                        console.log("📊 Initializing menu for first time");
                        window.initModernMenuOnce();
                    }
                    
                    // Toggle menu visibility
                    const isActive = menuHost.classList.contains('active');
                    
                    console.log("📊 Menu state before toggle:", {
                        isActive: isActive,
                        menuClasses: Array.from(menuHost.classList),
                        menuDisplay: window.getComputedStyle(menuHost).display
                    });
                    
                    if (isActive) {
                        menuHost.classList.remove('active');
                        document.body.classList.remove('menu-open');
                        toggleBtn.setAttribute('aria-expanded', 'false');
                        console.log("✅ Menu closed");
                    } else {
                        menuHost.classList.add('active');
                        document.body.classList.add('menu-open');
                        toggleBtn.setAttribute('aria-expanded', 'true');
                        console.log("✅ Menu opened");
                    }
                    
                    console.log("📊 Menu state after toggle:", {
                        isActive: menuHost.classList.contains('active'),
                        menuClasses: Array.from(menuHost.classList)
                    });
                });
                
                // Close menu on backdrop click
                const backdrop = menuHost.querySelector('.pm-backdrop');
                if (backdrop) {
                    backdrop.addEventListener('click', function() {
                        menuHost.classList.remove('active');
                        document.body.classList.remove('menu-open');
                        toggleBtn.setAttribute('aria-expanded', 'false');
                    });
                }
                
                // Close menu on close button click
                const closeBtn = menuHost.querySelector('.pm-close');
                if (closeBtn) {
                    closeBtn.addEventListener('click', function() {
                        menuHost.classList.remove('active');
                        document.body.classList.remove('menu-open');
                        toggleBtn.setAttribute('aria-expanded', 'false');
                    });
                }
                
                // Close menu on ESC key
                document.addEventListener('keydown', function(e) {
                    if (e.key === 'Escape' && menuHost.classList.contains('active')) {
                        menuHost.classList.remove('active');
                        document.body.classList.remove('menu-open');
                        toggleBtn.setAttribute('aria-expanded', 'false');
                    }
                });
            }
            
            // Add loading states and animations
            const content = document.querySelector('.main-content');
            if (content) {
                content.style.opacity = '0';
                content.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    content.style.transition = 'all 0.6s ease-out';
                    content.style.opacity = '1';
                    content.style.transform = 'translateY(0)';
                }, 100);
            }
            
            // Header scroll effect
            let lastScrollY = window.scrollY;
            const header = document.querySelector('.ultra-header');
            
            window.addEventListener('scroll', () => {
                const currentScrollY = window.scrollY;
                
                if (currentScrollY > lastScrollY && currentScrollY > 100) {
                    header.style.transform = 'translateY(-100%)';
                } else {
                    header.style.transform = 'translateY(0)';
                }
                
                lastScrollY = currentScrollY;
            });
            
            // Notification click handler
            const notificationBtn = document.querySelector('.notification-btn');
            if (notificationBtn) {
                notificationBtn.addEventListener('click', function() {
                    // Add notification functionality here
                    console.log('Notifications clicked');
                });
            }
            
            // User button click handler
            const userBtn = document.querySelector('.user-btn');
            if (userBtn) {
                userBtn.addEventListener('click', function() {
                    // Add user menu functionality here
                    console.log('User menu clicked');
                });
            }
            
            console.log('🚀 SKYsaas Ultra Modern UI Initialized');
        });
        
        // Membership Bar Functions - Connected to Legacy System
        function changeLanguage(lang) {
            console.log('تغيير اللغة إلى:', lang);
            try {
                // Use legacy membership changeCulture function
                if (typeof Web !== 'undefined' && Web.Membership && Web.Membership._instance) {
                    const membership = Web.Membership._instance;
                    if (membership.changeCulture) {
                        membership.changeCulture(lang);
                        return;
                    }
                }
                
                // Fallback to cookie-based approach
                const date = new Date();
                date.setDate(date.getDate() + 14);
                document.cookie = `.COTCULTURE=${lang}; expires=${date.toUTCString()}; path=/`;
                location.replace(location.href.split('#')[0]);
            } catch (e) {
                console.error('Language change failed:', e);
                // Simple fallback
                if (lang === 'ar') {
                    document.documentElement.setAttribute('dir', 'rtl');
                } else {
                    document.documentElement.setAttribute('dir', 'ltr');
                }
            }
        }
        
